<odoo>
    <data>

        <record model="ir.ui.view" id="invoice_line_sale_tree">
            <field name="name">invoice line sale tree</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <tree edit="0" create="0" delete="0">
                    <field name="branch_id"/>
                    <field name="invoice_date"/>
                    <field name="account_id"/>
                    <field name="product_id" string="Item:Name"/>
                    <field name="invoice_date_period"/>
                    <field name="shipment_line" string="JOB#:Name"/>
                    <field name="partner_id"/>
                    <field name="move_name" string="TRANSACTION N"/>
                    <field name="memo"/>
                    <field name="move_type"/>
                    <field name="tax_ids" widget="many2many_tags"/>
                    <field name="price_subtotal"/>
                    <field name="tax_amount"/>
                    <field name="gross_amount"/>
                </tree>
            </field>
        </record>


        <record id="invoice_line_action_sale" model="ir.actions.act_window">
            <field name="name">Vat Report Sales</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('move_id.move_type','in',['out_invoice','out_refund']),('move_id.state','in',['posted'])]</field>
            <field name="view_id" ref="invoice_line_sale_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                    GET ALL SALES INVOICE IN BOTH MODE INVOICE OR CREDIT NOTE
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <menuitem id="account_vat_report" name="VAT Report" sequence="5" parent="account.menu_finance_reports"/>

        <menuitem name="Sales VAT Report" id="menu_invoice_line_sale"
                  parent="account_vat_report"
                  action="freight_account_vat_report.invoice_line_action_sale"/>


    </data>
</odoo>