<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="invoice_type" />
                <field name="is_reversed"  invisible="1"/>
                <field name="created_from_cron"  invisible="1"/>
                <field name="created_from_shipment" />
                <field name="requested_by" invisible="1"/>
                <field name="requested_stored" invisible="0" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="created_from_shipment" readonly="1"/>
                <field name="billing_line_id" readonly="1" invisible="1"/>
                <field name="shipment_line" readonly="1" invisible="1"/>
                <field name="invoice_shipment" options="{'no_create': True,'no_create_edit':True}" domain="[('agent_id', '=', parent.partner_id)]" force_save="1" />
                <field name="bill_shipment" options="{'no_create': True,'no_create_edit':True}" force_save="1" />
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree" position="inside">
                <field name="invoice_shipment" invisible="1" />
                <field name="bill_shipment" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree" position="attributes">
                <attribute name="delete">0</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('created_from_shipment', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='invoice_shipment']" position="attributes">
                <attribute name="attrs">{'readonly': [('created_from_shipment', '=', True)], 'column_invisible': [('parent.move_type','!=','out_invoice')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='bill_shipment']" position="attributes">
                <attribute name="attrs">{'readonly': [('created_from_shipment', '=', True)], 'column_invisible': [('parent.move_type','!=','in_invoice')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="attributes">
                <attribute name="attrs">{'readonly': [('created_from_shipment', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='operating_unit_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('created_from_shipment', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='memo']" position="attributes">
                <attribute name="attrs">{'readonly': [('created_from_shipment', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='transport']" position="attributes">
                <attribute name="attrs">{'readonly': ['|','|', ('created_from_shipment', '=', True), ('invoice_shipment', '!=', False), ('bill_shipment', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='direction']" position="attributes">
                <attribute name="attrs">{'readonly': ['|','|', ('created_from_shipment', '=', True), ('invoice_shipment', '!=', False), ('bill_shipment', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='service_type']" position="attributes">
                <attribute name="attrs">{'readonly': ['|','|', ('created_from_shipment', '=', True), ('invoice_shipment', '!=', False), ('bill_shipment', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='line_of_service_id']" position="attributes">
                <attribute name="attrs">{'readonly': ['|','|', ('created_from_shipment', '=', True), ('invoice_shipment', '!=', False), ('bill_shipment', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('created_from_shipment', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='employee_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('created_from_shipment', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_account_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('created_from_shipment', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="attributes">
                <attribute name="attrs">{'readonly': [('created_from_shipment', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="attributes">
                <attribute name="attrs">{'readonly': [('created_from_shipment', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='open_reconcile_view']" position="after">
                <button class="oe_stat_button" name="open_related_shipment" attrs="{'invisible': [('created_from_shipment','=',False)]}" type="object" icon="fa-truck">
                    Shipment
                </button>
                <button class="oe_stat_button" name="open_related_shipment_billing_lines" attrs="{'invisible': [('created_from_shipment','=',False)]}" type="object" icon="fa-bars">
                    Billing Lines
                </button>
            </xpath>
        </field>
    </record>
</odoo>