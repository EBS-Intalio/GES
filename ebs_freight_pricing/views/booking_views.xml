<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_freight_booking_form_inherit" model="ir.ui.view">
            <field name="name">freight.booking.form.inherit_new</field>
            <field name="model">freight.booking</field>
            <field name="inherit_id" ref="freight.view_freight_booking_form"/>
            <field name="arch" type="xml">
<!--                <xpath expr="//button[@name='convert_to_operation']" position="after">-->
<!--                    <button name="create_booking_pricing" string="Create Pricing" states="draft" type="object"-->
<!--                            default_focus="1" class="oe_highlight"/>-->
<!--                </xpath>-->
                <xpath expr="//field[@name='transport']" position="after">
                    <field name="show_create_shipment" force_save="1" invisible="1"/>
                    <field name="checklist_id" invisible="1"/>
                </xpath>
                <xpath expr="header" position="inside">
                    <button name="create_processing_checklist" string="Create Checklist" states="draft" type="object"
                            default_focus="1" class="oe_highlight"/>
                </xpath>
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,processing_checklist,ship_order"/>
                </xpath>
                <xpath expr="//button[@name='convert_to_operation']" position="replace">
                    <button name="convert_to_operation" string="Convert To Shipment" type="object"
                            default_focus="1" class="oe_highlight" attrs="{'invisible':['|',('show_create_shipment','!=',True),('state','=','ship_order')]}"/>
                </xpath>

                <xpath expr="//sheet/div" position="before">
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="button_processing_checklist"
                                attrs="{'invisible': [('state','=','draft')]}"
                                type="object" icon="fa-gear">
                            Checklist
                        </button>
                    </div>
                </xpath>

<!--                <xpath expr="//sheet/div" position="before">-->
<!--                    <div class="oe_button_box" name="button_box">-->
<!--                        <button class="oe_stat_button" name="button_pricing"-->
<!--                                attrs="{'invisible': ['|', ('pricing_id','=',False), ('state','=','draft')]}"-->
<!--                                type="object" icon="fa-money">-->
<!--                            Book Pricing-->
<!--                        </button>-->
<!--                        <field name="pricing_id" invisible="1"/>-->
<!--                    </div>-->
<!--                </xpath>-->

            </field>
        </record>
    </data>
</odoo>