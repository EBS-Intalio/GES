<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_inherited_form_view" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                    <field name="transport" optional="show"/>
                    <field name="direction" optional="show"/>
                    <field name="service_type" optional="show"/>
                    <field name="line_of_service_id" optional="show"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>