<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_extended_company_form_view" model="ir.ui.view">
        <field name="name">account_extended.company.form.view</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="tz"/>
            </field>
        </field>
    </record>

    <record id="account_form_inherit" model="ir.ui.view">
        <field name="name">journal form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="reversal_date" invisible="1"/>
            </field>
        </field>
    </record>

</odoo>
