<odoo>
    <data>
        <!--        Currency-->

        <template id="search_template" inherit_id="account_reports.search_template">
            <xpath expr="//div[hasclass('o_account_reports_filter_date')]" position="after">
                <!--                <t t-esc="options"/>-->
                <div class="btn-group o_dropdown"
                     t-if="options.get('currency') != None and options.get('unhide_currency') == True and options.get('curr_model') in ['account.financial.html.report','account.assets.report']">
                    <t t-call="account_extended.search_template_filter_currency"/>
                </div>



            </xpath>
            <xpath expr="//div[hasclass('o_account_reports_filter_journals')]" position="before">
                <div class="btn-o_account_reports_filter_operating_unit btn-group o_dropdown "
                     t-if="options.get('operating_unit') != None and options.get('journals') != None">
                    <t t-call="account_extended.search_template_filter_operating_unit"/>
                </div>
            </xpath>


        </template>
        <template id="search_template_filter_currency">

            <a type="button" class="dropdown-toggle select_currency" data-toggle="dropdown">
                <span class="fa fa-book"/>
                Currencies:
                <t t-set="selected_currency"
                   t-value="', '.join(currency.get('name') for currency in options['currency'] if currency.get('selected'))"/>
                <t t-if="selected_currency">
                    <t t-esc="selected_currency"/>
                </t>
                <t t-else="">None</t>
            </a>
            <div id="select_currency" class="dropdown-menu o_filters_menu" role="menu">
                <t t-foreach="options['currency']" t-as="j">
                    <t t-if="j.get('id') == 'divider'">
                        <div role="separator" class="dropdown-divider"/>
                        <b role="menuitem" class="ml4 dropdown-item-text">
                            <t t-esc="j.get('name')"/>
                        </b>
                        <div role="separator" class="dropdown-divider"/>
                    </t>
                    <t t-if="j.get('id') != 'divider'">
                        <t t-if="j.get('id') == 'group'">
                            <a role="menuitem" class="dropdown-item js_account_report_group_choice_filter"
                               data-filter="currency" t-att-data-id="j.get('id')" t-att-data-member-ids="j.get('ids')">
                                <t t-esc="j.get('name')"/>
                            </a>
                        </t>
                        <t t-else="">
                            <a role="menuitem" class="dropdown-item js_account_report_choice_filter select_currency"
                               t-att-title="j.get('name')" t-att-data-id="j.get('id')" data-filter="currency">
                                <t t-esc="j.get('name')"/>
                            </a>
                        </t>
                    </t>
                </t>
            </div>
        </template>
<!--operating unit-->
        <template id="search_template_filter_operating_unit">
            <a type="button" class="dropdown-toggle operating_unit_filter" data-toggle="dropdown">
                <span class="fa fa-folder-open"/>
                Branch
            </a>
            <div class="dropdown-menu o_filters_menu" role="menu">
                <li style='margin-left: 10px; margin-right: 10px;'>
                    <b>Branch</b>
                    <br/>
                    <select class="js_operating_unit"
                            data-filter="operating_unit" multiple="multiple" style="min-width: 200px;">
                        <t t-foreach="request.env['operating.unit'].search([('active','=',True)])"
                           t-as="a">
                            <option t-att-value="a.id">
                                <t t-esc="a.code"/>
                                -
                                <t t-esc="a.name"/>
                            </option>
                        </t>
                    </select>
                </li>
                <div class="dropdown-divider" role="separator"></div>
            </div>
        </template>


    </data>
</odoo>