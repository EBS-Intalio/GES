<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- TRIAL BALANCE -->
    <record id="trial_balance_wizard_Inherit" model="ir.ui.view">
        <field name="name">Trial Balance Inherit</field>
        <field name="model">trial.balance.report.wizard</field>
        <field name="inherit_id" ref="account_financial_report.trial_balance_wizard"/>
        <field name="arch" type="xml">
            <group name="other_filters" position="replace">
                <group name="other_filters">
                     <field name="target_move" widget="radio"/>
                        <field name="show_total"/>
                        <field name="show_partner_details" invisible="1"/>
                </group>
            </group>
            <label for="journal_ids" position="attributes">
                <attribute name="invisible">1</attribute>
            </label>
            <field name="journal_ids" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <group name="account_filter" position="attributes">
                <attribute name="invisible">1</attribute>
            </group>
            <group name="partner_filter" position="attributes">
                <attribute name="invisible">1</attribute>
            </group>
        </field>
    </record>
        <menuitem
        parent="account_financial_report.menu_oca_reports"
        action="account_financial_report.action_trial_balance_wizard"
        id="account_financial_report.menu_trial_balance_wizard"
        sequence="20"
        name=" Customized Trial Balance"
    />
</odoo>