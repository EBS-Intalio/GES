<odoo>
    <data>
        <record id="freight_management_view_move_form_inherit" model="ir.ui.view">
            <field name="name">freight_management.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account_operating_unit.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='operating_unit_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath
                        expr="//field[@name='line_ids']/tree/field[@name='operating_unit_id']"
                        position="attributes">
                    <attribute name="required">1</attribute>

                </xpath>


            </field>
        </record>
        <record id="freight_accounting_extension_view_move_form_inherit" model="ir.ui.view">
            <field name="name">freight_accounting_extension.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="freight_accounting_extension.view_move_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='operating_unit_id']"
                       position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>


            </field>
        </record>

    </data>
</odoo>