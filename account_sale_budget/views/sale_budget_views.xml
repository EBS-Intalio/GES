<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_budget_form_view" model="ir.ui.view">
            <field name="name">sale.budget.form</field>
            <field name="model">sale.budget</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="action_confirm" string="Confirm" states="draft" type="object"
                                default_focus="1" class="oe_highlight"/>
                    </header>
                 <sheet>
                    <group>
                        <group>
                            <field name="name" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                            <field name="location_id" options="{'no_open':True,'no_create': True}" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                            <field name="company_id" />
                        </group>
                        <group>
                            <field name="date_from" attrs="{'readonly': [('state', '=', 'confirmed')]}" />
                            <field name="date_to" attrs="{'readonly': [('state', '=', 'confirmed')]}" />
                        </group>
                    </group>
                     <notebook>
                        <page name='lines' string="Lines">
                            <field name="sale_budget_line_ids" nolabel="1" widget="one2many" mode="tree" attrs="{'readonly': [('state', '=', 'confirmed')]}">
                                <tree editable="bottom">
                                    <field name="customer_id" />
                                    <field name="line_of_service_id" />
                                    <field name="revenue" />
                                    <field name="cos" />
                                    <field name="gp" />
                                    <field name="gm" />
                                    <field name="sale_budget_id" invisible="1" />
                                    <field name="budget_line_id" widget="many2many_tags" attrs="{'column_invisible': [('parent.state', '=', 'draft')]}" />
                                </tree>
                            </field>
                        </page>
                         <page name="other_info" string="Other Info" groups="account.group_account_user">
                             <label for="budget_id" string="Budget" />
                             <field name="budget_id" readonly="1" />
                         </page>
                     </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="sale_budget_tree_view">
            <field name="name">sale.budget.tree</field>
            <field name="model">sale.budget</field>
            <field name="arch" type="xml">
                <tree string="Sale Budget">
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="location_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="sale_budget_action">
            <field name="name">Sale Budget</field>
            <field name="res_model">sale.budget</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Sale Budget" parent="sale.menu_sale_config" id="menu_sale_budget"
                  action="sale_budget_action" sequence="10"/>

    </data>
</odoo>
