<odoo>
  <data>
   <record id="inherit_account_payment_form_view" model="ir.ui.view">
        <field name="name">account.payment.form.view</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="attributes">
              <attribute name="string">
                Journal Bank
              </attribute>
            </xpath>

            <xpath expr="//field[@name='date']" position="attributes">
              <attribute name="string">
                Accounting Date
              </attribute>
            </xpath>

            <xpath expr="//field[@name='date']" position="after">
              <field name="payment_date" />
            </xpath>

            <xpath expr="//field[@name='partner_bank_id']" position="after">
              <field name="mode_of_payment" />
            </xpath>
            <xpath expr="//field[@name='partner_bank_id']" position="after">
              <field name="payment_ref" />
            </xpath>

            <xpath expr="//field[@name='payment_method_id']" position="after">
                <field name="check_name" invisible="1" />
              <field name="check_num" attrs="{'invisible': [('check_name', '!=', 'Checks')]}"/>
            </xpath>

            <xpath expr="//field[@name='payment_method_id']" position="after">
              <field name="legal_name"/>
            </xpath>
        </field>
   </record>
  </data>
</odoo>