<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_partner_related_parties_form_view">
            <field name="name">partner.related.parties.form.view</field>
            <field name="model">partner.related.parties</field>
            <field name="arch" type="xml">
                <form string="Related Parties">
                    <sheet>
                        <group>
                            <group>
                                <field name="party_type"/>
                                <field name="party_type_description" readonly="1"/>
                                <field name="for_address" readonly="1"/>
                                <field name="company_system_level"/>
                            </group>
                            <group>
                                <field name="transport_mode" readonly="1"/>
                                <field name="container_mode" readonly="1"/>
                                <field name="related_partner_id"/>
                                <field name="related_partner_name" readonly="1"/>
                                <field name="unloco_id" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_partner_related_parties_tree_view">
            <field name="name">partner.related.parties.tree.view</field>
            <field name="model">partner.related.parties</field>
            <field name="arch" type="xml">
                <tree string="Related Parties">
                    <field name="party_type"/>
                    <field name="party_type_description" readonly="1"/>
                    <field name="for_address" readonly="1"/>
                    <field name="transport_mode" readonly="1"/>
                    <field name="container_mode" readonly="1"/>
                    <field name="related_partner_id"/>
                    <field name="related_partner_name" readonly="1"/>
                    <field name="company_system_level"/>
                    <field name="unloco_id" readonly="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="view_partner_related_parties_action">
            <field name="name">Related Parties</field>
            <field name="res_model">partner.related.parties</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Related Parties.
                </p>
            </field>
        </record>

    </data>
</odoo>
