<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="freight_management_freight_booking_form_view">
            <field name="name">freight_management.freight.job.request.form.view</field>
            <field name="model">freight.job.request</field>
            <field name="arch" type="xml">
                <form string="Operations">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <field name="is_create_pricing_request" invisible="1"/>

                        <button name="freight_request_pricing" string="Request Pricing" type="object"
                            default_focus="1" class="oe_highlight" attrs="{'invisible': [('state','!=','draft')]}"/>
                        <button name="create_request_pricing" string="Create Pricing" type="object"
                            default_focus="1" class="oe_highlight"
                                attrs="{'invisible':['|',('is_create_pricing_request','!=',True),('state','!=','pricing')]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="button_booking"
                                    attrs="{'invisible': [('booking_id','=',False)]}"
                                    type="object" icon="fa-book">
                                Booking
                            </button>
                            <button class="oe_stat_button" name="button_pricing"
                                    attrs="{'invisible': ['|', ('pricing_id','=',False), ('state','=','draft')]}"
                                    type="object" icon="fa-money">
                                Submit Rates
                            </button>

                            <button name="action_view_sales_order"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-reorder"
                                attrs="{'invisible': [('sales_count', '=', 0)]}">
                            <field name="sales_count" widget="statinfo" string="Sales Order"/>
                            </button>
                            <field name="pricing_id" invisible="1"/>
                        </div>
                        <div>
                        <h1>
                            <div>
                                <field name="name" readonly="1"/>
                            </div>
                        </h1>
                        </div>
                        <div>
                        <group>
                            <group>
                                <field name="mode_of_transport" options="{'horizontal': true}" widget="radio"/>
                            </group>
                            <group>
                                <field name="booking_id" invisible="1"/>
                                <field name="ocean_shipment" options="{'horizontal': true}" widget="radio"
                                       attrs="{'invisible': [('mode_of_transport','!=','ocean')], 'required' : [('mode_of_transport', '=', 'ocean')]}"/>
                                <field name="rail_shipment_type" options="{'horizontal': true}" widget="radio"
                                       attrs="{'invisible': [('mode_of_transport','!=','rail')], 'required' : [('mode_of_transport', '=', 'rail')]}"/>
                                <field name="inland_shipment" options="{'horizontal': true}" widget="radio"
                                       attrs="{'invisible': [('mode_of_transport','!=','land')], 'required' : [('mode_of_transport', '=', 'land')]}"/>
                                <field name="sea_then_air_shipment" options="{'horizontal': true}" widget="radio"
                                       attrs="{'invisible': [('mode_of_transport','!=','sea_then_air')], 'required' : [('mode_of_transport', '=', 'sea_then_air')]}"/>
                                <field name="air_then_sea_shipment" options="{'horizontal': true}" widget="radio"
                                       attrs="{'invisible': [('mode_of_transport','!=','air_then_sea')], 'required' : [('mode_of_transport', '=', 'air_then_sea')]}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="job_type"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="partner_id" required="1"/>
                            </group>
                            <group></group>
                            <group>
                                <field name="shipper_id" domain="[('shipper', '=', True)]" attrs="{'required' : [('mode_of_transport', '!=', 'documentation')]}"/>
                                <field name="shipper_addr" context="{'default_parent_id': shipper_id, 'default_type': 'other'}"
                                       domain="[('parent_id', '=', shipper_id),('parent_id','!=',False)]" options="{'no_create_edit':1}"/>
                            </group>
                            <group>
                                <field name="consignee_id" domain="[('consignee', '=', True)]" attrs="{'required' : [('mode_of_transport', '!=', 'documentation')]}"/>
                                <field name="consignee_addr" context="{'default_parent_id': consignee_id, 'default_type': 'other'}"
                                       domain="[('parent_id', '=', consignee_id),('parent_id','!=',False)]" options="{'no_create_edit':1}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="origin_airport_id" string="Origin Airport" attrs="{'invisible': [('mode_of_transport','!=','air')], 'required' : [('mode_of_transport', '=', 'air')]}"/>
                                <field name="origin_airport_id" string="POR /Origin" attrs="{'invisible': [('mode_of_transport','!=','ocean')], 'required' : [('mode_of_transport', '=', 'ocean')]}"/>
                                <field name="origin_airport_id" string="Origin" attrs="{'invisible': [('mode_of_transport','in',['ocean', 'air'])], 'required' : [('mode_of_transport', 'not in',['ocean', 'air', 'documentation'])]}"/>

                                <field name="consider_origin_close" options="{'horizontal': true}" widget="radio" string="Consider Close by Origin Airports" attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>
                                <field name="pol_id" attrs="{'invisible': [('mode_of_transport','not in',['ocean', 'sea_then_air', 'air_then_sea', 'rail'])]}"/>
                                <field name="equipment_type" attrs="{'invisible': [('mode_of_transport','!=','ocean')], 'required' : [('mode_of_transport', '=', 'ocean')]}" />
                                <field name="equipment_count" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}" />

                                <field name="shipping_line_id" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>
                                <field name="voyage_no" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}" invisible="1"/>
                                <field name="vessel_id" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>
                                <field name="mawb_no" attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>
                                <field name="truck_ref"  attrs="{'invisible': [('mode_of_transport','!=','land')]}"/>
                                <field name="trucker"  attrs="{'invisible': [('mode_of_transport','!=','land')]}"/>
                                <field name="trucker_number"  attrs="{'invisible': [('mode_of_transport','!=','land')]}"/>
                                <field name="vehicle_size" attrs="{'invisible': [('mode_of_transport','!=','land')], 'required' : [('mode_of_transport', '=', 'land')]}" />
                                <field name="vehicle_type" attrs="{'invisible': [('mode_of_transport','!=','land')], 'required' : [('mode_of_transport', '=', 'land')]}" />
                            </group>
                            <group>
                                <field name="destination_airport_id" string="Destination Airport" attrs="{'invisible': [('mode_of_transport','!=','air')], 'required' : [('mode_of_transport', '=', 'air')]}"/>
                                <field name="destination_airport_id" string="POFD /Destination" attrs="{'invisible': [('mode_of_transport','!=','ocean')], 'required' : [('mode_of_transport', '=', 'ocean')]}"/>
                                <field name="destination_airport_id" string="Destination" attrs="{'invisible': [('mode_of_transport','in',['ocean', 'air'])], 'required' : [('mode_of_transport', 'not in',['ocean', 'air', 'documentation'])]}"/>

                                <field name="consider_destination_close" options="{'horizontal': true}" widget="radio" string="Consider Close By Destination Airport" attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>
                                <field name="pod_id" attrs="{'invisible': [('mode_of_transport','not in',['ocean', 'sea_then_air', 'air_then_sea', 'rail'])]}"/>
                                <field name="preferred_airline_id" attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>
                                <field name="flight_no" attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>
                            </group>
                        </group>

<!--                        <group string="General">-->
<!--                                <group string="Loading Address">-->
<!--                                    <div class="o_address_format">-->
<!--                                        <field name="building" placeholder="Building..." class="o_address_street"/>-->
<!--                                        <field name="area" placeholder="Area..." class="o_address_street"/>-->
<!--                                        <field name="street" placeholder="Street..." class="o_address_street"/>-->
<!--                                        <field name="city" placeholder="City" class="o_address_city"/>-->
<!--                                        <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}"/>-->
<!--                                        <field name="po_box" placeholder="PO Box" class="o_address_zip" />-->
<!--                                        <field name="zip_code" placeholder="Zip Code" class="o_address_zip" />-->
<!--                                        <field name="country_id" placeholder="Country" class="o_address_country" />-->
<!--                                    </div>-->
<!--                                </group>-->
<!--                                <group string="Delivery Address">-->
<!--                                    <div class="o_address_format">-->
<!--                                        <field name="delivery_building" placeholder="Building..." class="o_address_street"/>-->
<!--                                        <field name="delivery_area" placeholder="Area..." class="o_address_street"/>-->
<!--                                        <field name="delivery_street" placeholder="Street..." class="o_address_street"/>-->
<!--                                        <field name="delivery_city" placeholder="City" class="o_address_city"/>-->
<!--                                        <field name="delivery_state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}"/>-->
<!--                                        <field name="delivery_po_box" placeholder="PO Box" class="o_address_zip" />-->
<!--                                        <field name="delivery_zip_code" placeholder="Zip Code" class="o_address_zip" />-->
<!--                                        <field name="delivery_country_id" placeholder="Country" class="o_address_country" />-->
<!--                                    </div>-->
<!--                                </group>-->
<!--                            </group>-->
                            <group></group>

                            <group>
                                <group>
                                    <field name="is_web_request" invisible="1"/>
                                    <field name="service_level"/>
                                    <field name="package_type_id" />
                                    <field name="number_of_pallets_packages" attrs="{'required' : [('mode_of_transport', '!=', 'documentation')]}"/>
                                    <field name="is_dimensions_visible" invisible="1"/>
                                    <field name="dimensions_of_package_id" context="{'is_dimensions_of_package': True}" attrs="{'invisible': [('is_dimensions_visible','!=', True)]}"/>
                                    <field name="clearance_required" options="{'horizontal': true}" widget="radio"/>
                                    <field name="warehousing" options="{'horizontal': true}" widget="radio"/>
                                    <field name="target_rate" />
                                    <label for="target_transit_time" attrs="{'invisible' : [('mode_of_transport', '=', 'documentation')]}"/>
                                    <div class="o_row" attrs="{'invisible' : [('mode_of_transport', '=', 'documentation')]}" name="target_transit_time">
                                        <field name="target_transit_time" nolabel="1"/>
                                        <span>Days</span>
                                    </div>
                                    <label for="expected_free_time_at_origin" attrs="{'invisible' : [('mode_of_transport', '=', 'documentation')]}"/>
                                    <div class="o_row" name="expected_free_time_at_origin" attrs="{'invisible' : [('mode_of_transport', '=', 'documentation')]}">
                                        <field name="expected_free_time_at_origin" nolabel="1"/>
                                        <span>Days</span>
                                    </div>
                                    <label for="expected_free_time_at_destination" attrs="{'invisible' : [('mode_of_transport', '=', 'documentation')]}"/>
                                    <div class="o_row" name="expected_free_time_at_destination" attrs="{'invisible' : [('mode_of_transport', '=', 'documentation')]}">
                                        <field name="expected_free_time_at_destination" nolabel="1"/>
                                        <span>Days</span>
                                    </div>
                                    <field name="additional_comments" />
                                    <field name="shipment_ready_asap" attrs="{'invisible' : [('mode_of_transport', '=', 'documentation')]}" options="{'horizontal': true}" widget="radio"/>
                                    <field name="shipment_ready_date" attrs="{'invisible': ['|', ('mode_of_transport', '=', 'documentation'), ('shipment_ready_asap','!=','no')]}"/>
                                    <field name="target_eta_asap" attrs="{'invisible' : [('mode_of_transport', '=', 'documentation')]}" options="{'horizontal': true}" widget="radio"/>
                                    <field name="target_eta" attrs="{'invisible': ['|', ('mode_of_transport', '=', 'documentation'), ('target_eta_asap','!=','no')]}"/>
                                    <field name="target_etd_asap" attrs="{'invisible' : [('mode_of_transport', '=', 'documentation')]}" options="{'horizontal': true}" widget="radio"/>
                                    <field name="target_etd" attrs="{'invisible': ['|', ('mode_of_transport', '=', 'documentation'), ('target_etd_asap','!=','no')]}"/>
                                </group>
                                <group>
                                    <field name="freight_incoterm_id" attrs="{'invisible': [('mode_of_transport','=','land')], 'required' : [('mode_of_transport', 'not in', ['land', 'documentation'])]}"/>
                                    <field name="incotearm_name" string="Incoterm Name"/>
                                    <br/>
                                    <field name="is_dangerous_goods" options="{'horizontal': true}" widget="radio"/>
                                    <field name="dangerous_goods_class" attrs="{'invisible': [('is_dangerous_goods','!=','yes')], 'required' : [('is_dangerous_goods', '=', 'yes')]}" />
                                    <field name="dangerous_goods_notes" style="border-color: black;" attrs="{'invisible': [('is_dangerous_goods','!=','yes')]}"/>
                                    <field name="reefer_status" attrs="{'required' : [('mode_of_transport', '!=', 'documentation')]}"/>

                                    <field name="temperature" attrs="{'invisible' : [('mode_of_transport', '=', 'documentation')]}" options="{'horizontal': true}" widget="radio"/>
                                    <field name="temperature_value" attrs="{'invisible': ['|', ('mode_of_transport', '=', 'documentation'), ('temperature','=',False)]}"/>

                                    <field name="commodity_category" attrs="{'required' : [('mode_of_transport', '!=', 'documentation')]}"/>
                                    <field name="commodity_description" attrs="{'required' : [('mode_of_transport', '!=', 'documentation')]}"/>
                                    <field name="freight_hs_code_ids" widget="many2many_tags" attrs="{'required' : [('mode_of_transport', '!=', 'documentation')]}"/>
                                    <field name="gross_weight" attrs="{'required' : [('mode_of_transport', '!=', 'documentation')]}"/>
                                    <field name="weight_type" options="{'horizontal': true}" widget="radio" default="estimated"/>
                                    <field name="stackability" options="{'horizontal': true}" widget="radio"/>
                                    <field name="additional_requirements" />
                                </group>
                            </group>

                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="freight_management_freight_booking_tree_view">
            <field name="name">freight_management.freight.job.request.tree.view</field>
            <field name="model">freight.job.request</field>
            <field name="arch" type="xml">
                <tree string="Operations">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="mode_of_transport"/>
                    <field name="shipper_id"/>
                    <field name="consignee_id"/>
                    <field name="origin_airport_id"/>
                    <field name="destination_airport_id"/>
                    <field name="partner_id"/>

                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="freight_management_freight_job_request_action">
            <field name="name">Request</field>
            <field name="res_model">freight.job.request</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
