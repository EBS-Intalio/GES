<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="freight_management_freight_booking_form_view">
            <field name="name">freight_management.freight.job.request.form.view</field>
            <field name="model">freight.job.request</field>
            <field name="arch" type="xml">
                <form string="Operations">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <field name="is_booking_done" invisible="1"/>
                        <button name="create_request_pricing" string="Create Pricing" states="draft" type="object"
                                default_focus="1" class="oe_highlight"/>
                        <button name="create_booking" string="Create Booking" states="draft" type="object"
                                default_focus="1" class="oe_highlight"
                                attrs="{'invisible':[('is_booking_done','=',True)]}"/>
                        <!--                        <button name="convert_to_operation" string="Convert To Shipment" states="draft" type="object" default_focus="1" class="oe_highlight"/>-->
                        <!--                        <button name="reset_book" string="Reset" states="converted" type="object" default_focus="1" class="oe_highlight"/>-->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="button_booking"
                                    attrs="{'invisible': [('booking_id','=',False)]}"
                                    type="object" icon="fa-book">
                                Booking
                            </button>
                            <button class="oe_stat_button" name="button_pricing"
                                    attrs="{'invisible': ['|', ('pricing_id','=',False), ('state','=','draft')]}"
                                    type="object" icon="fa-money">
                                Book Pricing
                            </button>

                            <button name="action_view_sales_order"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-truck"
                                    attrs="{'invisible': [('sales_count', '=', 0)]}">
                                <field name="sales_count" widget="statinfo" string="Sales Order"/>
                            </button>
                            <field name="pricing_id" invisible="1"/>
                        </div>
                        <!--                        <div class="oe_button_box" name="button_box" >-->
                        <!--                            <button class="oe_stat_button" name="button_shipping"-->
                        <!--                                    attrs="{'invisible': [('state','=','draft')]}"-->
                        <!--                                    type="object" icon="fa-truck">-->
                        <!--                                Shipment-->
                        <!--                            </button>-->
                        <!--                        </div>-->
                        <div>
                            <h1>
                                <div>
                                    <field name="name" readonly="1"/>
                                </div>
                            </h1>
                        </div>
                        <div>
                            <group string="Operation">
                                <group>
                                    <field name="mode_of_transport" widget="radio"/>
                                    <field name="ocean_shipment" widget="radio"
                                           attrs="{'invisible': [('mode_of_transport','!=','ocean')], 'required' : [('mode_of_transport', '=', 'ocean')]}"/>
                                    <field name="inland_shipment" widget="radio"
                                           attrs="{'invisible': [('mode_of_transport','!=','land')], 'required' : [('mode_of_transport', '=', 'land')]}"/>
                                    <field name="air_shipment" widget="radio"
                                           attrs="{'invisible': [('mode_of_transport','!=','air')], 'required' : [('mode_of_transport', '=', 'air')]}"/>
                                </group>
                                <group>
                                    <field name="freight_incoterm_id"
                                           attrs="{'invisible': [('mode_of_transport','=','land')], 'required' : [('mode_of_transport', '!=', 'land')]}"/>
                                    <field name="job_type"/>
                                    <field name="booking_id" invisible="1"/>
                                    <!--                                <field name="por_origin" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>-->
                                    <!--                                <field name="pol" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>-->
                                    <!--                                <field name="pod" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>-->
                                    <!--                                <field name="pofd_destination" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>-->
                                    <!--                                <field name="airline_id" attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>-->
                                    <field name="equipment_type"
                                           attrs="{'invisible': [('mode_of_transport','!=','ocean')], 'required' : [('mode_of_transport', '=', 'ocean')]}"/>
                                    <field name="vehicle_size"
                                           attrs="{'invisible': [('mode_of_transport','!=','land')], 'required' : [('mode_of_transport', '=', 'land')]}"/>
                                    <field name="vehicle_type"
                                           attrs="{'invisible': [('mode_of_transport','!=','land')], 'required' : [('mode_of_transport', '=', 'land')]}"/>
                                </group>
                            </group>
                            <group>
                                <group string="Shipper">
                                    <field name="shipper_id" domain="[('freight_type', '=', 'shipper')]" required="1"/>
                                </group>
                                <group string="Consignee">
                                    <field name="consignee_id" domain="[('freight_type', '=', 'consignee')]"
                                           required="1"/>
                                </group>
                            </group>
                            <group string="Main Carriage">
                                <group>
                                    <field name="origin_airport_id"/>
                                    <field name="consider_origin_close"/>
                                    <field name="shipping_line_id"
                                           attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>
                                    <field name="voyage_no"
                                           attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>
                                    <field name="vessel_id"
                                           attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>
                                    <field name="mawb_no" attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>
                                    <!--                                <field name="obl" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>-->
                                </group>
                                <group>
                                    <field name="destination_airport_id"/>
                                    <field name="consider_destination_close"/>
                                    <field name="flight_no" attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>
                                    <!--                                <field name="datetime"/>-->
                                    <field name="truck_ref" attrs="{'invisible': [('mode_of_transport','!=','land')]}"/>
                                    <field name="trucker" attrs="{'invisible': [('mode_of_transport','!=','land')]}"/>
                                    <field name="trucker_number"
                                           attrs="{'invisible': [('mode_of_transport','!=','land')]}"/>
                                </group>
                            </group>

                            <group string="General">
                                <group string="Loading Address">
                                    <div class="o_address_format">
                                        <field name="building" placeholder="Building..." class="o_address_street"/>
                                        <field name="area" placeholder="Area..." class="o_address_street"/>
                                        <field name="street" placeholder="Street..." class="o_address_street"/>
                                        <field name="city" placeholder="City" class="o_address_city"/>
                                        <field name="state_id" class="o_address_state" placeholder="State"
                                               options="{'no_open': True, 'no_quick_create': True}"/>
                                        <field name="po_box" placeholder="PO Box" class="o_address_zip"/>
                                        <field name="zip_code" placeholder="Zip Code" class="o_address_zip"/>
                                        <field name="country_id" placeholder="Country" class="o_address_country"/>
                                    </div>
                                </group>
                                <group string="Delivery Address">
                                    <div class="o_address_format">
                                        <field name="delivery_building" placeholder="Building..."
                                               class="o_address_street"/>
                                        <field name="delivery_area" placeholder="Area..." class="o_address_street"/>
                                        <field name="delivery_street" placeholder="Street..." class="o_address_street"/>
                                        <field name="delivery_city" placeholder="City" class="o_address_city"/>
                                        <field name="delivery_state_id" class="o_address_state" placeholder="State"
                                               options="{'no_open': True, 'no_quick_create': True}"/>
                                        <field name="delivery_po_box" placeholder="PO Box" class="o_address_zip"/>
                                        <field name="delivery_zip_code" placeholder="Zip Code" class="o_address_zip"/>
                                        <field name="delivery_country_id" placeholder="Country"
                                               class="o_address_country"/>
                                    </div>
                                </group>
                            </group>

                            <group>
                                <group>
                                    <!--                                <field name="barcode"/>-->
                                    <field name="partner_id"/>
                                    <field name="package_type_id"/>
                                    <field name="clearance_required"/>
                                    <field name="warehousing"/>
                                    <field name="target_rate"/>
                                    <label for="shipment_ready_date"/>
                                    <div class="o_row" name="shipment_ready_date">
                                        <field name="shipment_ready_date" nolabel="1"/>
                                        <span attrs="{'invisible': [('shipment_ready_date','=',False)]}">ASAP</span>
                                        <field name="shipment_ready_asap" nolabel="1"
                                               attrs="{'invisible': [('shipment_ready_date','=',False)]}"/>
                                    </div>
                                    <label for="target_eta"/>
                                    <div class="o_row" name="target_eta">
                                        <field name="target_eta" nolabel="1"/>
                                        <span attrs="{'invisible': [('target_eta','=',False)]}">ASAP</span>
                                        <field name="target_eta_asap" nolabel="1"
                                               attrs="{'invisible': [('target_eta','=',False)]}"/>
                                    </div>
                                    <label for="target_etd"/>
                                    <div class="o_row" name="target_etd">
                                        <field name="target_etd" nolabel="1"/>
                                        <span attrs="{'invisible': [('target_etd','=',False)]}">ASAP</span>
                                        <field name="target_etd_asap" nolabel="1"
                                               attrs="{'invisible': [('target_etd','=',False)]}"/>
                                    </div>
                                    <label for="target_transit_time"/>
                                    <div class="o_row" name="target_transit_time">
                                        <field name="target_transit_time" nolabel="1"/>
                                        <span>Days</span>
                                    </div>
                                    <label for="expected_free_time_at_origin"/>
                                    <div class="o_row" name="expected_free_time_at_origin">
                                        <field name="expected_free_time_at_origin" nolabel="1"/>
                                        <span>Days</span>
                                    </div>
                                    <label for="expected_free_time_at_destination"/>
                                    <div class="o_row" name="expected_free_time_at_destination">
                                        <field name="expected_free_time_at_destination" nolabel="1"/>
                                        <span>Days</span>
                                    </div>
                                    <field name="preferred_airline_id"
                                           attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>
                                    <field name="additional_comments"/>
                                    <!--                                <field name="preferred_shipping_line" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>-->
                                </group>
                                <group>
                                    <field name="is_dangerous_goods"/>
                                    <field name="dangerous_goods_class"
                                           attrs="{'invisible': [('is_dangerous_goods','!=',True)], 'required' : [('is_dangerous_goods', '=', True)]}"/>
                                    <field name="dangerous_goods_notes"
                                           attrs="{'invisible': [('is_dangerous_goods','!=',True)]}"/>
                                    <!--                                <field name="move_type"/>-->
                                    <!--                                <field name="tracking_number"/>-->
                                    <field name="reefer_status"/>
                                    <label for="temperature"/>
                                    <div class="o_row" name="temperature">
                                        <field name="temperature" nolabel="1"/>
                                        <span attrs="{'invisible': [('temperature','=',False)]}">SET</span>
                                        <field name="temperature_value" nolabel="1"
                                               attrs="{'invisible': [('temperature','=',False)]}"/>
                                    </div>
                                    <field name="commodity_category"/>
                                    <field name="commodity_description"/>
                                    <field name="freight_hs_code_ids" widget="many2many_tags"/>
                                    <field name="gross_weight"/>
                                    <field name="weight_type"/>
                                    <field name="number_of_pallets_packages"/>
                                    <field name="stackability"/>
                                    <field name="additional_requirements"/>

                                </group>
                            </group>

                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="freight_management_freight_booking_tree_view">
            <field name="name">freight_management.freight.job.request.tree.view</field>
            <field name="model">freight.job.request</field>
            <field name="arch" type="xml">
                <tree string="Operations">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="mode_of_transport"/>
                    <!--                    <field name="direction"/>-->
                    <field name="shipper_id"/>
                    <field name="consignee_id"/>
                    <field name="origin_airport_id"/>
                    <field name="destination_airport_id"/>
                    <field name="partner_id"/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_freight_booking_form_inherit">
            <field name="name">freight.booking.form.inherit</field>
            <field name="model">freight.booking</field>
            <field name="inherit_id" ref="freight.view_freight_booking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button class="oe_stat_button" name="button_request"
                            attrs="{'invisible': [('freight_request_id','=',False)]}"
                            type="object" icon="fa-address-book">
                        Freight Request
                    </button>
                </xpath>

                <xpath expr="//field[@name='shipper_id']" position="after">
                    <field name="freight_request_id" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="freight_management_freight_job_request_action">
            <field name="name">Request</field>
            <field name="res_model">freight.job.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--        <menuitem name="Freight" id="main_freight_management_root"-->
        <!--                  web_icon="freight_management,static/description/icon.png"-->
        <!--                  sequence="1"/>-->

        <!--        <menuitem name="Configuration" parent="main_freight_management_root" id="menu_freight_configuration" sequence="3"/>-->

        <!--        <menuitem name="Operations" parent="main_freight_management_root" id="menu_freight_operations" sequence="1"/>-->

        <!--        <menuitem name="Request" parent="menu_freight_operations" id="freight_job_request" action="freight_management_freight_job_request_action" sequence="5"/>-->

        <menuitem name="Request" parent="freight.freight_operations" id="freight_house_freight_request"
                  action="freight_management_freight_job_request_action" sequence="5"/>

    </data>
</odoo>