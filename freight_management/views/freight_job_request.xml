<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="freight_management_freight_booking_form_view">
            <field name="name">freight_management.freight.job.request.form.view</field>
            <field name="model">freight.job.request</field>
            <field name="arch" type="xml">
                <form string="Operations">
                    <header>
                        <field name="state" widget="statusbar"/>
<!--                        <field name="is_booking_done" invisible="1"/>-->
                        <field name="is_create_pricing_request" invisible="1"/>

                        <button name="freight_request_pricing" string="Request Pricing" type="object"
                            default_focus="1" class="oe_highlight" attrs="{'invisible': [('state','!=','draft')]}"/>
                        <button name="create_request_pricing" string="Create Pricing" type="object"
                            default_focus="1" class="oe_highlight"
                                attrs="{'invisible':['|',('is_create_pricing_request','!=',True),('state','!=','pricing')]}"/>
<!--                        <button name="create_booking" string="Create Booking" states="draft" type="object"-->
<!--                            default_focus="1" class="oe_highlight" attrs="{'invisible':[('is_booking_done','=',True)]}" invisible="1"/>-->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="button_booking"
                                    attrs="{'invisible': [('booking_id','=',False)]}"
                                    type="object" icon="fa-book">
                                Booking
                            </button>
                            <button class="oe_stat_button" name="button_pricing"
                                    attrs="{'invisible': ['|', ('pricing_id','=',False), ('state','=','draft')]}"
                                    type="object" icon="fa-money">
                                Submit Rates
                            </button>

                            <button name="action_view_sales_order"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-reorder"
                                attrs="{'invisible': [('sales_count', '=', 0)]}">
                            <field name="sales_count" widget="statinfo" string="Sales Order"/>
                            </button>
                            <field name="pricing_id" invisible="1"/>
                        </div>
                        <div>
                        <h1>
                            <div>
                                <field name="name" readonly="1"/>
                            </div>
                        </h1>
                        </div>
                        <div>
                        <group string="Operation">
                            <group>
                                <field name="mode_of_transport" widget="radio"/>
                            </group>
                            <group>
                                <field name="booking_id" invisible="1"/>
                                <field name="ocean_shipment" widget="radio"
                                       attrs="{'invisible': [('mode_of_transport','!=','ocean')], 'required' : [('mode_of_transport', '=', 'ocean')]}"/>
                                <field name="rail_shipment_type" widget="radio"
                                       attrs="{'invisible': [('mode_of_transport','!=','rail')], 'required' : [('mode_of_transport', '=', 'rail')]}"/>
                                <field name="inland_shipment" widget="radio"
                                       attrs="{'invisible': [('mode_of_transport','!=','land')], 'required' : [('mode_of_transport', '=', 'land')]}"/>
                                <field name="sea_then_air_shipment" widget="radio"
                                       attrs="{'invisible': [('mode_of_transport','!=','sea_then_air')], 'required' : [('mode_of_transport', '=', 'sea_then_air')]}"/>
                                <field name="air_then_sea_shipment" widget="radio"
                                       attrs="{'invisible': [('mode_of_transport','!=','air_then_sea')], 'required' : [('mode_of_transport', '=', 'air_then_sea')]}"/>
                            </group>
                        </group>
                        <group>
                            <group string="Shipper">
                                <field name="shipper_id" domain="[('shipper', '=', True)]" required="1"/>
                                <field name="shipper_addr" domain="[('parent_id', '=', shipper_id),('parent_id','!=',False)]" options="{'no_create_edit':1}"/>
                            </group>
                            <group string="Consignee">
                                <field name="consignee_id" domain="[('consignee', '=', True)]" required="1"/>
                                <field name="consignee_addr" domain="[('parent_id', '=', consignee_id),('parent_id','!=',False)]" options="{'no_create_edit':1}"/>
                            </group>
                            <group string="Customer">
                                <field name="partner_id" required="1"/>
                            </group>
                        </group>
                        <group string="Main Carriage" attrs="{'invisible': [('mode_of_transport','not in', ['air', 'ocean', 'land'])]}">
                            <group>
                                <field name="origin_airport_id" string="Origin Airport" attrs="{'invisible': [('mode_of_transport','!=','air')], 'required' : [('mode_of_transport', '=', 'air')]}"/>
                                <field name="origin_airport_id" string="POR /Origin" attrs="{'invisible': [('mode_of_transport','!=','ocean')], 'required' : [('mode_of_transport', '=', 'ocean')]}"/>

                                <field name="consider_origin_close" widget="radio" string="Consider Close by Origin Airports" attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>
                                <field name="pol_id" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>
                                <field name="equipment_type" attrs="{'invisible': [('mode_of_transport','!=','ocean')], 'required' : [('mode_of_transport', '=', 'ocean')]}" />
                                <field name="shipping_line_id" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>
                                <field name="voyage_no" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}" invisible="1"/>
                                <field name="vessel_id" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>
                                <field name="mawb_no" attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>
                                <field name="truck_ref"  attrs="{'invisible': [('mode_of_transport','!=','land')]}"/>
                                <field name="trucker"  attrs="{'invisible': [('mode_of_transport','!=','land')]}"/>
                                <field name="trucker_number"  attrs="{'invisible': [('mode_of_transport','!=','land')]}"/>
                                <field name="vehicle_size" attrs="{'invisible': [('mode_of_transport','!=','land')], 'required' : [('mode_of_transport', '=', 'land')]}" />
                                <field name="vehicle_type" attrs="{'invisible': [('mode_of_transport','!=','land')], 'required' : [('mode_of_transport', '=', 'land')]}" />
                            </group>
                            <group>
                                <field name="destination_airport_id" string="Destination Airport" attrs="{'invisible': [('mode_of_transport','!=','air')], 'required' : [('mode_of_transport', '=', 'air')]}"/>
                                <field name="destination_airport_id" string="POFD /Destination" attrs="{'invisible': [('mode_of_transport','!=','ocean')], 'required' : [('mode_of_transport', '=', 'ocean')]}"/>
                                <field name="consider_destination_close" widget="radio" string="Consider Close By Destination Airport" attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>
                                <field name="pod_id" attrs="{'invisible': [('mode_of_transport','!=','ocean')]}"/>
                                <field name="preferred_airline_id" attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>
                                <field name="flight_no" attrs="{'invisible': [('mode_of_transport','!=','air')]}"/>
                            </group>
                        </group>

                        <group string="General">
                                <group string="Loading Address">
                                    <div class="o_address_format">
                                        <field name="building" placeholder="Building..." class="o_address_street"/>
                                        <field name="area" placeholder="Area..." class="o_address_street"/>
                                        <field name="street" placeholder="Street..." class="o_address_street"/>
                                        <field name="city" placeholder="City" class="o_address_city"/>
                                        <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}"/>
                                        <field name="po_box" placeholder="PO Box" class="o_address_zip" />
                                        <field name="zip_code" placeholder="Zip Code" class="o_address_zip" />
                                        <field name="country_id" placeholder="Country" class="o_address_country" />
                                    </div>
                                </group>
                                <group string="Delivery Address">
                                    <div class="o_address_format">
                                        <field name="delivery_building" placeholder="Building..." class="o_address_street"/>
                                        <field name="delivery_area" placeholder="Area..." class="o_address_street"/>
                                        <field name="delivery_street" placeholder="Street..." class="o_address_street"/>
                                        <field name="delivery_city" placeholder="City" class="o_address_city"/>
                                        <field name="delivery_state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}"/>
                                        <field name="delivery_po_box" placeholder="PO Box" class="o_address_zip" />
                                        <field name="delivery_zip_code" placeholder="Zip Code" class="o_address_zip" />
                                        <field name="delivery_country_id" placeholder="Country" class="o_address_country" />
                                    </div>
                                </group>
                            </group>

                            <group>
                                <group>
                                    <field name="is_web_request" invisible="1"/>
                                    <field name="job_type"/>

                                    <field name="service_level"/>
                                    <field name="package_type_id" />
                                    <field name="is_dimensions_visible" invisible="1"/>
                                    <field name="dimensions_of_package_id" context="{'is_dimensions_of_package': True}" attrs="{'invisible': [('is_dimensions_visible','!=', True)]}"/>
                                    <field name="clearance_required" widget="radio"/>
                                    <field name="warehousing" widget="radio"/>
                                    <field name="target_rate" />
                                    <label for="target_transit_time"/>
                                    <div class="o_row" name="target_transit_time">
                                        <field name="target_transit_time" nolabel="1"/>
                                        <span>Days</span>
                                    </div>
                                    <label for="expected_free_time_at_origin"/>
                                    <div class="o_row" name="expected_free_time_at_origin">
                                        <field name="expected_free_time_at_origin" nolabel="1"/>
                                        <span>Days</span>
                                    </div>
                                    <label for="expected_free_time_at_destination"/>
                                    <div class="o_row" name="expected_free_time_at_destination">
                                        <field name="expected_free_time_at_destination" nolabel="1"/>
                                        <span>Days</span>
                                    </div>
                                    <field name="additional_comments" />
                                     <field name="shipment_ready_date"/>
                                    <field name="shipment_ready_asap" widget="radio"/>
                                    <field name="target_eta"/>
                                    <field name="target_eta_asap" widget="radio"/>
                                    <field name="target_etd"/>
                                    <field name="target_etd_asap" widget="radio"/>
                                </group>
                                <group>
                                    <field name="freight_incoterm_id" attrs="{'invisible': [('mode_of_transport','=','land')], 'required' : [('mode_of_transport', '!=', 'land')]}"/>
                                    <field name="is_dangerous_goods" widget="radio"/>
                                    <field name="dangerous_goods_class" attrs="{'invisible': [('is_dangerous_goods','!=','yes')], 'required' : [('is_dangerous_goods', '=', 'yes')]}" />
                                    <field name="dangerous_goods_notes" attrs="{'invisible': [('is_dangerous_goods','!=','yes')]}"/>
                                    <field name="reefer_status"/>
                                    <label for="temperature"/>
                                    <div class="o_row" name="temperature">
                                        <field name="temperature" widget="radio" nolabel="1"/>
                                        <span attrs="{'invisible': [('temperature','=',False)]}">SET</span>
                                        <field name="temperature_value" nolabel="1" attrs="{'invisible': [('temperature','=',False)]}"/>
                                    </div>
                                    <field name="commodity_category"/>
                                    <field name="commodity_description"/>
                                    <field name="freight_hs_code_ids" widget="many2many_tags"/>
                                    <field name="gross_weight"/>
                                    <field name="weight_type" widget="radio" required="1"/>
                                    <field name="number_of_pallets_packages"/>
                                    <field name="stackability" widget="radio"/>
                                    <field name="additional_requirements" />
                                </group>
                            </group>

                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="freight_management_freight_booking_tree_view">
            <field name="name">freight_management.freight.job.request.tree.view</field>
            <field name="model">freight.job.request</field>
            <field name="arch" type="xml">
                <tree string="Operations">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="mode_of_transport"/>
                    <field name="shipper_id"/>
                    <field name="consignee_id"/>
                    <field name="origin_airport_id"/>
                    <field name="destination_airport_id"/>
                    <field name="partner_id"/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_freight_booking_form_inherit">
            <field name="name">freight.booking.form.inherit</field>
            <field name="model">freight.booking</field>
            <field name="inherit_id" ref="freight.view_freight_booking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button class="oe_stat_button" name="button_request"
                                    attrs="{'invisible': [('freight_request_id','=',False)]}"
                                    type="object" icon="fa-address-book">
                                Freight Request
                            </button>
                </xpath>

                <xpath expr="//field[@name='shipper_id']" position="after">
                    <field name="shipper_address_id" domain="[('parent_id', '=', shipper_id),('parent_id','!=',False)]" options="{'no_create_edit':1}"/>
                    <field name="freight_request_id" readonly="1"/>
                </xpath>

                <xpath expr="//field[@name='consignee_id']" position="after">
                    <field name="consignee_address_id" domain="[('parent_id', '=', consignee_id),('parent_id','!=',False)]" options="{'no_create_edit':1}"/>
                </xpath>

                <xpath expr="//field[@name='agent_id']" position="after">
                    <field name="client_address_id" domain="[('parent_id', '=', agent_id),('parent_id','!=',False)]" options="{'no_create_edit':1}"/>
                </xpath>


                <xpath expr="//field[@name='hs_code']" position="replace">
                    <field name="hs_code" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//form/sheet" position="inside">
                    <notebook>
                        <page name="details" string="Details">
                            <group>
                                <group>
                                    <field name="is_domestic"/>
                                    <field name="add_terms"/>
                                    <field name="service_level"/>
                                    <field name="shippers_ref"/>
                                    <field name="carrier_id"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="est_pickup_date"/>
                                        <field name="est_delivery_date"/>
                                    </group>
                                    <group>
                                        <field name="pickup_required_by_date"/>
                                        <field name="delivery_required_by_date"/>
                                    </group>
                                </group>
                            </group>
                            <group>
                                <group string="Goods Details">
                                    <div class="o_row" name="outers">
                                        <span>Outers</span>
                                        <field name="outers"/>
                                        <field name="outers_uom_id" nolabel="1"/>
                                    </div>
                                    <div class="o_row" name="volume" >
                                        <span>Volume</span>
                                        <field name="volume"/>
                                        <field name="volume_uom_id" nolabel="1"/>
                                    </div>
                                    <div class="o_row" name="gross_weight" style="margin-top: 4%;">
                                        <span>Weight</span>
                                        <field name="gross_weight"/>
                                        <field name="weight_uom_id" nolabel="1"/>
                                    </div>
                                    <div class="o_row" name="chargeable" style="margin-top: 4%;">
                                        <span>Chargeable</span>
                                        <field name="chargeable"/>
                                        <field name="chargeable_uom_id"/>
                                    </div>
                                </group>
                                <group string="Goods Details">
                                    <field name="pic_drop_id"/>
                                    <field name="div_drop_id"/>
                                </group>
                                <group string="Brokerage Details">
<!--                                    <span></span>-->
                                    <field name="brokerage_type"/>
                                </group>
                            </group>
                            <notebook>
                                <page name="container" string="Containers">
                                    <field name="container_ids" nolabel="1"/>
                                </page>

                                <page name="loose_cargo" string="Loose Cargo">
                                    <field name="loose_cargo_ids" nolabel="1"/>
                                </page>

                                <page name="job_management" string="Job Management Link">
                                    <field name="job_management_ids" nolabel="1"/>
                                </page>

<!--                                <page name="goods_details" string="Goods Details">-->
<!--                                    <group>-->
<!--                                        <group>-->
<!--                                            <div class="o_row" name="outers">-->
<!--                                                <span>Outers</span>-->
<!--                                                <field name="outers"/>-->
<!--                                                <field name="outers_uom_id" nolabel="1"/>-->
<!--                                            </div>-->
<!--                                            <div class="o_row" name="volume" >-->
<!--                                                <span>Volume</span>-->
<!--                                                <field name="volume"/>-->
<!--                                                <field name="volume_uom_id" nolabel="1"/>-->
<!--                                            </div>-->
<!--                                            <div class="o_row" name="gross_weight" style="margin-top: 4%;">-->
<!--                                                <span>Weight</span>-->
<!--                                                <field name="gross_weight"/>-->
<!--                                                <field name="weight_uom_id" nolabel="1"/>-->
<!--                                            </div>-->
<!--                                            <div class="o_row" name="chargeable" style="margin-top: 4%;">-->
<!--                                                <span>Chargeable</span>-->
<!--                                                <field name="chargeable"/>-->
<!--                                                <field name="chargeable_uom_id"/>-->
<!--                                            </div>-->
<!--                                        </group>-->
<!--                                        <group>-->
<!--                                            <field name="pic_drop_id"/>-->
<!--                                            <field name="div_drop_id"/>-->
<!--                                        </group>-->
<!--                                    </group>-->
<!--                                </page>-->

                                <page name="monetary_values" string="Monetary Values">
                            <group>
                                <div class="o_row" name="goods_vals" style="margin-top: 4%;">
                                    <span>Goods Val</span>
                                    <field name="goods_vals"/>
                                    <field name="goods_vals_currency_id"/>
                                </div>
                                <div class="o_row" name="ins_vals" style="margin-top: 4%;">
                                    <span>Ins Value</span>
                                    <field name="ins_vals"/>
                                    <field name="ins_vals_currency_id"/>
                                </div>
                            </group>
                            <group>
                                <field name="is_insurance_required"/>
                            </group>
                        </page>
                            </notebook>
                        </page>
                        <page name="additional_details" string="Additional Details">
                            <header>
                                <button name="button_add_new_sailings" string="Add New Sailing" type="object" class="oe_highlight"/>
                                <button name="button_view_sailings" string="View Sailings" type="object" class="oe_highlight"/>
                                <button name="button_clear_sailing" string="Clear Sailing" type="object" class="oe_highlight"/>
                                <button name="button_lode_list" string="Load List" type="object" class="oe_highlight"/>
                            </header>
                            <group>
                                <group>
                                    <div class="o_row" name="source_location_id">
                                        <span>Origin</span>
                                        <field name="source_location_id"/>
                                    </div>

                                    <div class="o_row" name="destination_location_id">
                                        <span>Destination</span>
                                        <field name="destination_location_id"/>
                                    </div>

                                    <div class="o_row" name="est_pickup_date" style="margin-top: 4%;">
                                        <span>ETA</span>
                                        <field name="est_pickup_date"/>
                                    </div>

                                    <div class="o_row" name="est_delivery_date" style="margin-top: 4%;">
                                        <span>ETD</span>
                                        <field name="est_delivery_date"/>
                                    </div>

                                    <div class="o_row" name="total_current_weight" style="margin-top: 4%;">
                                        <span>Estimated Arrival Date</span>
                                        <field name="estimated_arrival_date" nolabel="1"/>
                                    </div>
                                    <div class="o_row" name="total_current_volume" style="margin-top: 4%;">
                                        <span>Estimated Departure Date</span>
                                        <field name="estimated_departure_date" nolabel="1"/>
                                    </div>
                                    <div class="o_row" name="total_current_weight" style="margin-top: 4%;">
                                        <span>Total Current Weight</span>
                                        <field name="total_current_weight"/>
                                        <field name="weight_uom_id" nolabel="1"/>
                                    </div>

                                    <div class="o_row" name="cfs_cut_off" style="margin-top: 4%;">
                                        <span>CFS Cut Off</span>
                                        <field name="cfs_cut_off"/>
                                    </div>

                                    <div class="o_row" name="total_current_volume" style="margin-top: 4%;">
                                        <span>Total Current Volume</span>
                                        <field name="total_current_volume"/>
                                        <field name="volume_uom_id" nolabel="1"/>
                                    </div>
                                </group>
                                <group>
                                    <field name="booked_date"/>
                                    <field name="client_req_eat_date"/>
                                    <field name="warehouse_rec_date"/>
                                    <field name="interim_receipt"/>
                                    <field name="cfs_ref"/>
                                    <field name="booking_party_id"/>
                                    <field name="cfs_id"/>
                                    <field name="pickup_agent_id"/>
                                    <field name="delivery_agent_id"/>
                                    <field name="export_broker_id"/>
                                    <field name="import_broker_id"/>
                                    <field name="port_transport_id"/>
                                    <field name="controlling_customer_id"/>
                                    <field name="controlling_agent_id"/>
                                </group>
                            </group>
                            <notebook>
                                <page name="reference_number" string="Reference Number">
                                    <field name="reference_ids" nolabel="1"/>
                                </page>
                                <page name="service_details" string="Service Details">
                                    <field name="service_details_ids" nolabel="1">
                                        <tree>
                                            <field name="service_type"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </page>

                        <!--<page name="commodity_details" string="Commodity Details">
                            <field name="commodity_ids" nolabel="1"/>
                        </page>-->

                    </notebook>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="freight_management_freight_job_request_action">
            <field name="name">Request</field>
            <field name="res_model">freight.job.request</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
