<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_freight_doc_line_form_view">
            <field name="name">freight.doc.line.form.view</field>
            <field name="model">freight.doc.line</field>
            <field name="arch" type="xml">
                <form string="Freight Doc Lines">
                    <sheet>
                        <group>
                            <group>
                                <field name="order_no"/>
                                <field name="category"/>
                                <field name="name"/>
                                <field name="value"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_freight_freight_doc_line_tree_view">
            <field name="name">freight.doc.line.tree.view</field>
            <field name="model">freight.doc.line</field>
            <field name="arch" type="xml">
                <tree string="Freight Doc Line">
                    <field name="order_no"/>
                    <field name="category"/>
                    <field name="name"/>
                    <field name="value"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="view_freight_doc_line_action">
            <field name="name">Doc Data</field>
            <field name="res_model">freight.doc.line</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Doc Data Line.
                </p>
            </field>
        </record>


    </data>
</odoo>
