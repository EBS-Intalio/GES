<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_freight_booking_form_view_inherit">
            <field name="name">freight.booking.form.inherit</field>
            <field name="model">freight.booking</field>
            <field name="inherit_id" ref="freight.view_freight_booking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="replace">
                    <sheet>
                        <div class="oe_button_box" name="button_box" >
                            <field name="pricing_id" invisible="1"/>
                            <field name="freight_id" invisible="1"/>
                            <field name="show_create_processing_checklist" force_save="1" invisible="1"/>
                            <field name="freight_request_id" invisible="1"/>
                            <button class="oe_stat_button" name="button_shipping"
                                    attrs="{'invisible': ['|', ('freight_id','=',False),('state','=','draft')]}"
                                    type="object" icon="fa-truck">
                                Shipment
                            </button>
                            <button name="action_view_customer_invoice"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-clipboard"
                                    attrs="{'invisible': [('invoice_count', '=', 0)]}">
                                <field name="invoice_count" widget="statinfo" string="Customer Invoice"/>
                            </button>
                            <button class="oe_stat_button" name="button_request"
                                    attrs="{'invisible': [('freight_request_id','=',False)]}"
                                    type="object" icon="fa-address-book">
                                Freight Request
                            </button>
                            <button class="oe_stat_button" name="button_processing_checklist"
                                    attrs="{'invisible': [('show_create_processing_checklist','!=',True)]}"
                                    type="object" icon="fa-gear">
                                Checklist
                            </button>
                        </div>
                        <div>
                        <h1>
                            <div>
                                <field name="name" readonly="1"/>
                            </div>
                        </h1>
                        </div>
                        <div>
                            <group>
                                <group>
                                    <field name="transport" options="{'horizontal': true}" widget="radio"/>
                                </group>
                                <group>
                                    <field name="ocean_shipment_type" options="{'horizontal': true}" widget="radio"
                                           attrs="{'invisible': [('transport','!=','ocean')], 'required' : [('transport', '=', 'ocean')]}"/>
                                    <field name="rail_shipment_type" options="{'horizontal': true}" widget="radio"
                                           attrs="{'invisible': [('transport','!=','rail')], 'required' : [('transport', '=', 'rail')]}"/>
                                    <field name="inland_shipment_type" options="{'horizontal': true}" widget="radio"
                                           attrs="{'invisible': [('transport','!=','land')], 'required' : [('transport', '=', 'land')]}"/>
                                    <field name="sea_then_air_shipment" options="{'horizontal': true}" widget="radio"
                                           attrs="{'invisible': [('transport','!=','sea_then_air')], 'required' : [('transport', '=', 'sea_then_air')]}"/>
                                    <field name="air_then_sea_shipment" options="{'horizontal': true}" widget="radio"
                                           attrs="{'invisible': [('transport','!=','air_then_sea')], 'required' : [('transport', '=', 'air_then_sea')]}"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="direction" readonly="1" options="{'horizontal': true}" widget="radio"/>
                                </group>
                                <group>
                                    <field name="job_type"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="agent_id" required="1"/>
                                </group>
                                <group></group>
                                <group>
                                    <field name="shipper_id" domain="[('shipper', '=', True)]" required="1"/>
                                    <field name="shipper_address_id" domain="[('parent_id', '=', shipper_id),('parent_id','!=',False)]"
                                           context="{'default_parent_id': shipper_id, 'default_type': 'other'}"
                                           options="{'no_create_edit':1}"/>
                                </group>
                                <group>
                                    <field name="consignee_id" domain="[('consignee', '=', True)]" required="1"/>
                                    <field name="consignee_address_id" context="{'default_parent_id': consignee_id, 'default_type': 'other'}"
                                           domain="[('parent_id', '=', consignee_id),('parent_id','!=',False)]" options="{'no_create_edit':1}"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="source_location_id" string="Origin Airport" attrs="{'invisible': [('transport','!=','air')], 'required' : [('transport', '=', 'air')]}"/>
                                    <field name="source_location_id" string="POR /Origin" attrs="{'invisible': [('transport','!=','ocean')], 'required' : [('transport', '=', 'ocean')]}"/>
                                    <field name="source_location_id" string="Origin" attrs="{'invisible': [('transport','in',['ocean', 'air'])], 'required' : [('transport', 'not in',['ocean', 'air'])]}"/>
    
                                    <field name="origin_close" string="Consider Close by Origin Airports" style="margin-bottom: 5%;margin-top: 5%;" attrs="{'invisible': [('transport','!=','air')]}"/>
                                    <field name="pol" attrs="{'invisible': [('transport','not in',['ocean', 'sea_then_air', 'air_then_sea', 'rail'])]}"/>
                                    <field name="equipment_type" attrs="{'invisible': [('transport','!=','ocean')], 'required' : [('transport', '=', 'ocean')]}" />
                                    <field name="equipment_count" attrs="{'invisible': [('transport','!=','ocean')]}" />

                                    <field name="shipping_line_id" attrs="{'invisible': [('transport','!=','ocean')]}"/>
                                    <field name="voyage_no" attrs="{'invisible': [('transport','!=','ocean')]}" invisible="1"/>
                                    <field name="vessel_id" attrs="{'invisible': [('transport','!=','ocean')]}"/>
                                    <field name="mawb_no" attrs="{'invisible': [('transport','!=','air')]}"/>
                                    <field name="truck_ref"  attrs="{'invisible': [('transport','!=','land')]}"/>
<!--                                    <field name="trucker"  attrs="{'invisible': [('transport','!=','land')]}"/>-->
<!--                                    <field name="trucker_number"  attrs="{'invisible': [('transport','!=','land')]}"/>-->
                                    <field name="vehicle_size" attrs="{'invisible': [('transport','!=','land')], 'required' : [('transport', '=', 'land')]}" />
                                    <field name="vehicle_type" attrs="{'invisible': [('transport','!=','land')], 'required' : [('transport', '=', 'land')]}" />
                                </group>
                                <group>
                                    <field name="destination_location_id" string="Destination Airport" attrs="{'invisible': [('transport','!=','air')], 'required' : [('transport', '=', 'air')]}"/>
                                    <field name="destination_location_id" string="POFD /Destination" attrs="{'invisible': [('transport','!=','ocean')], 'required' : [('transport', '=', 'ocean')]}"/>
                                    <field name="destination_location_id" string="Destination" attrs="{'invisible': [('transport','in',['ocean', 'air'])], 'required' : [('transport', 'not in',['ocean', 'air'])]}"/>

                                    <field name="destination_close" style="margin-bottom: 5%;margin-top: 5%;" string="Consider Close By Destination Airport" attrs="{'invisible': [('transport','!=','air')]}"/>
                                    <field name="pod" attrs="{'invisible': [('transport','not in',['ocean', 'sea_then_air', 'air_then_sea', 'rail'])]}"/>
                                    <field name="preferred_airline_id" string="Airline" attrs="{'invisible': [('transport','!=','air')]}"/>
                                    <field name="flight_no" attrs="{'invisible': [('transport','!=','air')]}"/>
                                </group>
                            </group>
<!--                            <group string="General">-->
<!--                                <group string="Loading Address">-->
<!--                                    <div class="o_address_format">-->
<!--                                        <field name="building" placeholder="Building..." class="o_address_street"/>-->
<!--                                        <field name="area" placeholder="Area..." class="o_address_street"/>-->
<!--                                        <field name="street" placeholder="Street..." class="o_address_street"/>-->
<!--                                        <field name="city" placeholder="City" class="o_address_city"/>-->
<!--                                        <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}"/>-->
<!--                                        <field name="po_box" placeholder="PO Box" class="o_address_zip" />-->
<!--                                        <field name="zip_code" placeholder="Zip Code" class="o_address_zip" />-->
<!--                                        <field name="country_id" placeholder="Country" class="o_address_country" />-->
<!--                                    </div>-->
<!--                                </group>-->
<!--                                <group string="Delivery Address">-->
<!--                                    <div class="o_address_format">-->
<!--                                        <field name="delivery_building" placeholder="Building..." class="o_address_street"/>-->
<!--                                        <field name="delivery_area" placeholder="Area..." class="o_address_street"/>-->
<!--                                        <field name="delivery_street" placeholder="Street..." class="o_address_street"/>-->
<!--                                        <field name="delivery_city" placeholder="City" class="o_address_city"/>-->
<!--                                        <field name="delivery_state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}"/>-->
<!--                                        <field name="delivery_po_box" placeholder="PO Box" class="o_address_zip" />-->
<!--                                        <field name="delivery_zip_code" placeholder="Zip Code" class="o_address_zip" />-->
<!--                                        <field name="delivery_country_id" placeholder="Country" class="o_address_country" />-->
<!--                                    </div>-->
<!--                                </group>-->
<!--                            </group>-->
                            <group></group>
                            <group>
                                <group>
                                    <field name="service_level"/>
                                    <field name="package_type_id" />
                                    <field name="number_packages"/>
                                    <field name="is_dimensions_visible" invisible="1"/>
                                    <field name="dimensions_of_package_id" context="{'is_dimensions_of_package': True}" attrs="{'invisible': [('is_dimensions_visible','!=', True)]}"/>
                                    <field name="clearance_required"/>

                                    <field name="bl_copy" attrs="{'invisible': [('clearance_required','!=','yes')], 'required' : [('clearance_required', '=', 'yes')]}"/>
                                    <field name="shipping_documents" attrs="{'invisible': [('clearance_required','!=','yes')], 'required' : [('clearance_required', '=', 'yes')]}"/>
                                    <field name="original_copy" attrs="{'invisible': ['|', ('shipping_documents','!=',True), ('clearance_required','!=','yes')], 'required' : [('shipping_documents', '=', True), ('clearance_required', '=', 'yes')]}" options="{'horizontal': true}" widget="radio"/>

                                    <field name="warehousing" widget="radio" options="{'horizontal': true}"/>
                                    <field name="target_rate" string="Quotation Amount"/>
                                    <label for="target_transit_time"/>
                                    <div class="o_row" name="target_transit_time">
                                        <field name="target_transit_time" nolabel="1"/>
                                        <span>Days</span>
                                    </div>
                                    <label for="expected_free_time_at_origin"/>
                                    <div class="o_row" name="expected_free_time_at_origin">
                                        <field name="expected_free_time_at_origin" nolabel="1"/>
                                        <span>Days</span>
                                    </div>
                                    <label for="expected_free_time_at_destination"/>
                                    <div class="o_row" name="expected_free_time_at_destination">
                                        <field name="expected_free_time_at_destination" nolabel="1"/>
                                        <span>Days</span>
                                    </div>
                                    <field name="additional_comments" />
                                    <field name="shipment_ready_asap" widget="radio" options="{'horizontal': true}"/>
                                    <field name="shipment_ready_date" attrs="{'invisible': [('shipment_ready_asap','!=','no')]}"/>
                                </group>
                                <group>
                                    <field name="incoterm" attrs="{'invisible': [('transport','=','land')], 'required' : [('transport', '!=', 'land')]}"/>
                                    <field name="incotearm_name" string="Incoterm Name"/>
                                    <br/>
                                    <field name="dangerous_goods"/>
                                    <field name="danger_class" attrs="{'invisible': [('dangerous_goods','!=',True)], 'required' : [('dangerous_goods', '=', True)]}" />
                                    <field name="dangerous_goods_notes" style="border-color: black;" attrs="{'invisible': [('dangerous_goods','!=',True)]}"/>
                                    <field name="reefer_status"/>
                                    <label for="temperature"/>
                                    <div class="o_row" name="temperature">
                                        <field name="temperature" nolabel="1"/>
                                        <span attrs="{'invisible': [('temperature','=',False)]}">SET</span>
                                        <field name="set_temperature" nolabel="1" attrs="{'invisible': [('temperature','=',False)]}"/>
                                    </div>
                                    <field name="commodity_category"/>
                                    <field name="commodity_description"/>
                                    <field name="hs_code" widget="many2many_tags"/>
                                    <field name="additional_requirements" />
                                </group>
                            </group>

                        </div>
                        <notebook>
                        <page name="details" string="Details">
                            <group>
                                <group>
                                    <field name="is_domestic" readonly="1"/>
<!--                                    <field name="marks_and_num"/>-->
                                    <field name="add_terms"/>
                                    <field name="shippers_ref"/>
                                    <field name="carrier_id" domain="[('is_carrier', '=', True)]"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="est_pickup_date"/>
                                        <field name="est_delivery_date"/>
                                    </group>
                                    <group>
                                        <field name="pickup_required_by_date"/>
                                        <field name="delivery_required_by_date"/>
                                    </group>
                                </group>
                            </group>
                            <group>
                                <group string="Goods Details">
                                    <div class="o_row" name="outers">
                                        <span>Outers</span>
                                        <field name="outers"/>
                                        <field name="outers_uom_id" nolabel="1"/>
                                    </div>
                                    <div class="o_row" name="volume" >
                                        <span>Volume</span>
                                        <field name="volume"/>
                                        <field name="volume_uom_id" nolabel="1"/>
                                    </div>
                                    <div class="o_row" name="gross_weight" style="margin-top: 4%;">
                                        <span>Weight</span>
                                        <field name="gross_weight"/>
                                        <field name="weight_uom_id" nolabel="1"/>
                                    </div>
                                    <div class="o_row" name="chargeable" style="margin-top: 4%;">
                                        <span>Chargeable Weight</span>
                                        <field name="chargeable"/>
                                        <field name="chargeable_uom_id"/>
                                    </div>
                                </group>
                                <group style="margin-top: 4%;">
                                    <field name="pic_drop_id"/>
                                    <field name="div_drop_id"/>
                                </group>
                                <group>
                                    <field name="weight_type" widget="radio" options="{'horizontal': true}" default="estimated"/>
                                    <field name="stackability" widget="radio" options="{'horizontal': true}"/>
                                    <field name="number_packages"/>
                                </group>
                                <group></group>
                                <group string="Brokerage Details">
                                    <group>
                                        <field name="brokerage_type" nolabel="1"/>
                                    </group>
                                    <group>
                                        <field name="brokerage_details" nolabel="1"/>
                                    </group>
                                    <field name="cargo_container_visible" invisible="1"/>
                                </group>
                                <group string="Monetary Values">
                                    <div class="o_row" name="goods_vals" style="margin-top: 4%;">
                                        <span>Goods Val</span>
                                        <field name="goods_vals"/>
                                        <field name="goods_vals_currency_id"/>
                                    </div>
                                    <div class="o_row" name="ins_vals" style="margin-top: 4%;">
                                        <span>Ins Value</span>
                                        <field name="ins_vals"/>
                                        <field name="ins_vals_currency_id"/>
                                    </div>
                                    <div class="o_row" name="is_insurance_required" style="margin-top: 4%;">
                                        <span>Insurance Required</span>
                                        <field name="is_insurance_required" widget="radio" options="{'horizontal': true}"/>
                                    </div>
                                </group>
<!--                                <group string="Job Management Link">-->
<!--                                    <field name="job_management_order_ref"/>-->
<!--                                </group>-->
<!--                                <group></group>-->
<!--                                <group>-->
<!--                                    <field name="job_management_ids" nolabel="1">-->
<!--                                        <tree editable="bottom">-->
<!--                                            <field name="job_number"/>-->
<!--                                            <field name="job_type"/>-->
<!--                                            <field name="job_description"/>-->
<!--                                        </tree>-->
<!--                                    </field>-->
<!--                                </group>-->
                                <group string="Security" attrs="{'invisible': [('transport','!=','air')]}">
                                    <field name="inspection" />
                                </group>
                            </group>
                            <notebook>
                                <page name="loose_cargo" string="Loose Cargo">
                                    <field name="loose_cargo_ids" nolabel="1"/>
                                </page>
                                <page name="container" string="Containers" attrs="{'invisible': [('cargo_container_visible','!=','both')]}">
                                    <field name="container_ids" context="{'default_dep_container_id': shipper_id, 'default_arr_container_yard_id': consignee_id}" nolabel="1"/>
                                </page>
                                <page name="vehicle_details" string="Vehicle Details">
                                    <field name="vehicle_ids" nolabel="1"/>
                                </page>
                                <page name="order_management_link" string="Order Management Link">
                                    <group>
                                        <field name="job_management_order_ref"/>
                                    </group>
                                    <field name="job_management_ids" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="job_number"/>
                                            <field name="job_type"/>
                                            <field name="job_description"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </page>
                        <page name="additional_details" string="Additional Details">
                            <header>
                                <button name="button_add_new_sailings" string="Add New Sailing"  attrs="{'invisible': [('transport', '!=', 'ocean')]}" type="object" class="oe_highlight"/>
                                <button name="button_clear_sailing" string="Clear Sailing" type="object" class="oe_highlight" />
                            </header>
                            <group>
                                <group>
                                    <div class="o_row" name="source_location_id">
                                        <span>Origin</span>
                                        <field name="source_location_id"/>
                                    </div>

                                    <div class="o_row" name="destination_location_id">
                                        <span>Destination</span>
                                        <field name="destination_location_id"/>
                                    </div>

                                    <div class="o_row" name="load_location_id">
                                        <span>Load</span>
                                        <field name="load_location_id"/>
                                    </div>

                                    <div class="o_row" name="discharge_location_id">
                                        <span>Discharge</span>
                                        <field name="discharge_location_id"/>
                                    </div>

                                    <div class="o_row" name="est_pickup_date" style="margin-top: 4%;">
                                        <span>ETA</span>
                                        <field name="est_pickup_date"/>
                                    </div>

                                    <div class="o_row" name="est_delivery_date" style="margin-top: 4%;">
                                        <span>ETD</span>
                                        <field name="est_delivery_date"/>
                                    </div>

                                    <div class="o_row" name="total_current_weight" style="margin-top: 4%;">
                                        <span>Estimated Arrival Date</span>
                                        <field name="estimated_arrival_date" nolabel="1"/>
                                    </div>
                                    <div class="o_row" name="total_current_volume" style="margin-top: 4%;">
                                        <span>Estimated Departure Date</span>
                                        <field name="estimated_departure_date" nolabel="1"/>
                                    </div>
                                    <div class="o_row" name="total_current_weight" style="margin-top: 4%;">
                                        <span>Total Current Weight</span>
                                        <field name="total_current_weight"/>
                                        <field name="weight_uom_id" nolabel="1"/>
                                    </div>

                                    <div class="o_row" name="cfs_cut_off" style="margin-top: 4%;">
                                        <span>CFS Cut Off</span>
                                        <field name="cfs_cut_off"/>
                                    </div>

                                    <div class="o_row" name="total_current_volume" style="margin-top: 4%;">
                                        <span>Total Current Volume</span>
                                        <field name="total_current_volume"/>
                                        <field name="volume_uom_id" nolabel="1"/>
                                    </div>
                                </group>
                                <group>
                                    <field name="booked_date"/>
                                    <field name="client_req_eat_date"/>
                                    <field name="warehouse_rec_date"/>
                                    <field name="interim_receipt"/>
                                    <field name="cfs_ref"/>
                                    <field name="booking_party_id"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="cfs_id"/>
                                    <field name="pickup_agent_id"/>
                                    <field name="delivery_agent_id"/>
                                    <field name="export_broker_id"/>
                                </group>
                                <group>
                                    <field name="import_broker_id"/>
                                    <field name="port_transport_id"/>
                                    <field name="controlling_customer_id"/>
                                </group>
                            </group>
                            <notebook>
                                <page name="reference_number" string="Reference Number">
                                    <field name="reference_ids" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="name" required="1"/>
                                            <field name="type"/>
                                            <field name="country_id"/>
                                        </tree>
                                    </field>
                                </page>
                                <page name="service_details" string="Service Details">
                                    <field name="service_details_ids" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="service_type"/>
                                            <field name="contractor_id"/>
                                            <field name="date_booked"/>
                                            <field name="completed"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </page>
                    </notebook>
                    </sheet>
                </xpath>

                <xpath expr="//button[@name='convert_to_operation']" position="after">
                    <button name="action_create_new_invoice" string="Create Bill" type="object" class="oe_highlight"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
