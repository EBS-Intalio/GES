<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.view.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='account_id']" position="after">
                    <field name="employee_id"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree//field[@name='analytic_account_id']" position="after">
                    <field name="employee_id"/>
                </xpath>
            </field>
        </record>
        <record id="account_view_move_line_form_inherit" model="ir.ui.view">
            <field name="name">account.view.move.line.form.inherit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_id']" position="after">
                    <field name="employee_id"/>
                </xpath>
            </field>
        </record>
        <record id="view_account_analytic_line_form_inherit" model="ir.ui.view">
            <field name="name">view_account_analytic_line_form.inherit</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_id']" position="after">
                    <field name="employee_id"/>
                    <field name="operating_unit_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>