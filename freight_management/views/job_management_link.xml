<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="job_management_link_form_view">
            <field name="name">job.management.link.form.view</field>
            <field name="model">job.management.link</field>
            <field name="arch" type="xml">
                <form string="Job Management Link">
                    <sheet>
                        <group>
                            <group>
                                <field name="order_ref"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Management Lines">
                                <field name="job_management_link_line_ids">
                                    <tree editable="bottom">
                                        <field name="job_number"/>
										<field name="job_type"/>
                                        <field name="job_description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="job_management_link_tree_view">
            <field name="name">job.management.link.tree.view</field>
            <field name="model">job.management.link</field>
            <field name="arch" type="xml">
                <tree string="Job Management Link">
                    <field name="order_ref"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="job_management_link_action">
            <field name="name">Job Management Link</field>
            <field name="res_model">job.management.link</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Job Management Link.
                </p>
            </field>
        </record>

    </data>
</odoo>
