<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_freight_order_form_view">
            <field name="name">freight.order.form.view</field>
            <field name="model">freight.order</field>
            <field name="arch" type="xml">
                <form string="Order">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <field name="shipment_count" invisible="1"/>
                        <field name="booking_count" invisible="1"/>
                        <button name="convert_to_booking" string="Convert To Booking" attrs="{'invisible': [('booking_count', '!=', 0)]}" type="object" default_focus="1" class="oe_highlight"/>
                        <button name="split_order" string="Validate"  type="object" default_focus="1" class="oe_highlight"/>
                        <button name="convert_to_shipment" attrs="{'invisible': [('shipment_count', '!=', 0)]}" string="Convert To Shipment"  type="object" class="oe_highlight"/>
<!--                        <button name="create_declaration" string="Create Declaration" states="draft" type="object" default_focus="1" class="oe_highlight"/>-->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_freight_booking"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-clipboard"
                                    attrs="{'invisible': [('booking_count', '=', 0)]}">
                                <field name="booking_count" widget="statinfo" string="Booking"/>
                            </button>

                            <button name="action_view_freight_operation"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-clipboard"
                                    attrs="{'invisible': [('shipment_count', '=', 0)]}">
                                <field name="shipment_count" widget="statinfo" string="Shipment"/>
                            </button>

                            <button name="get_split_new_order"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-clipboard"
                                    attrs="{'invisible': [('split_order_count', '=', 0)]}" context="{'split':True}">
                                <field name="split_order_count" widget="statinfo" string="Split Orders"/>
                            </button>
                            <button name="get_split_new_order"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-clipboard"
                                    attrs="{'invisible': [('new_order_count', '=', 0)]}" context="{'split':False}">
                                <field name="new_order_count" widget="statinfo" string="New Orders"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="buyer" domain="[('consignee', '=', True)]" attrs="{'required' : [('mode_of_transport', '!=', 'documentation')]}"/>
                                <field name="buyer_address" domain="[('parent_id', '=', buyer),('parent_id','!=',False)]"
                                           context="{'default_parent_id': buyer, 'default_type': 'other'}"
                                           options="{'no_create_edit':1}"/>
                            </group>
                            <group>
                                <field name="shipper" domain="[('shipper', '=', True)]" attrs="{'required' : [('mode_of_transport', '!=', 'documentation')]}"/>
                                <field name="shipper_address" domain="[('parent_id', '=', shipper),('parent_id','!=',False)]"
                                           context="{'default_parent_id': shipper, 'default_type': 'other'}"
                                           options="{'no_create_edit':1}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="order_no" required="1"/>
                                <field name="branch_id" required="1"/>
                                <field name="agent_id"/>
                                <field name="confirm_no"/>
                                <field name="invoice_no"/>
                                <field name="req_ex_work"/>
                                <field name="pre_advice_id"/>
                            </group>
                            <group>
                                <field name="oder_date"/>
                                <field name="confirm_date"/>
                                <field name="invoice_date"/>
                                <field name="order_status"/>
                                <field name="followup_date"/>
                                <field name="req_in_store"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="additional_terms"/>
                                <field name="mode_of_transport" required="1"/>
                                <field name="air_cont_mode" attrs="{'invisible':[('mode_of_transport','not in',['air'])]}"/>
                                <field name="sea_cont_mode" attrs="{'invisible':[('mode_of_transport','not in',['ocean'])]}"/>
                                <field name="sea_and_air_cont_mode" attrs="{'invisible':[('mode_of_transport','not in',['sea_then_air','air_then_sea'])]}"/>
                                <field name="road_cont_mode" attrs="{'invisible':[('mode_of_transport','not in',['land'])]}"/>
                                <field name="rail_cont_mode" attrs="{'invisible':[('mode_of_transport','not in',['rail'])]}"/>
                                <field name="courier_cont_mode" attrs="{'invisible':[('mode_of_transport','not in',['courier'])]}"/>
                                <field name="post_container_mode" attrs="{'invisible':[('mode_of_transport','not in',['documentation'])]}"/>
                                <field name="origin_country"/>
                            </group>
                            <group>
                                <field name="goods_description"/>
                                <field name="currency"/>
                                <field name="currency_value"/>
                                <field name="service_level"/>
                                <field name="incoterm_id" attrs="{'invisible': [('mode_of_transport','=','land')]}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="reefer_status" widget="radio" required="1" options="{'horizontal': true}"/>
                                <field name="commodity_category" options="{'horizontal': true}" attrs="{'required' : [('mode_of_transport', 'not in', ['documentation'])]}"/>
                                <field name="commodity_description"/>
                                <field name="hs_code" widget="many2many_tags" />
                                <field name="clearance_required" options="{'horizontal': true}" widget="radio" required="1"/>
                                <field name="warehousing" options="{'horizontal': true}" widget="radio" required="1"/>
                            </group>
                            <group>
                                <field name="weight_type" options="{'horizontal': true}" widget="radio" required="1"/>
                                <field name="gross_weight"  required="1"/>
                                <field name="equipment_type" attrs="{'invisible': [('mode_of_transport','!=','ocean')], 'required' : [('mode_of_transport', 'in', ['ocean'])]}"/>
                                <field name="vehicle_size" attrs="{'invisible': [('mode_of_transport','!=','land')], 'required' : [('mode_of_transport', 'in', ['land'])]}"/>
                                <field name="vehicle_type" attrs="{'invisible': [('mode_of_transport','!=','land')], 'required' : [('mode_of_transport', 'in', ['land'])]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="order_line" string="Order Line">
                                <group>
                                    <field name="order_line_ids" nolabel="1"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="order_line_line_count" readonly="1"/>
                                        <field name="order_line_inner_packs" readonly="1"/>
                                        <field name="order_line_outer_packs" readonly="1"/>
                                        <field name="order_line_quantity" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="order_line_invoiced" readonly="1"/>
                                        <field name="order_line_quantity_received" readonly="1"/>
                                        <field name="order_line_remaining" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page name="planning" string="Planning">
                                <group>
                                    <group>
                                        <field name="origin_cutoff"/>
                                        <field name="carrier"/>
                                        <field name="house_bill"/>
                                        <field name="master_bill"/>
                                    </group>
                                    <group string="Vessel">
                                        <field name="departure" attrs = "{'invisible':[('mode_of_transport','not in',['ocean','sea_then_air','air_then_sea'])]}"/>
                                        <field name="intermediate" attrs = "{'invisible':[('mode_of_transport','not in',['ocean','sea_then_air','air_then_sea'])]}"/>
                                        <field name="arrival" attrs = "{'invisible':[('mode_of_transport','not in',['ocean','sea_then_air','air_then_sea'])]}"/>
                                        <field name="goods_origin" />
                                        <field name="goods_destination" />
                                        <field name="port_of_loading"/>
                                        <field name="discharge_port"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="estimated_depart"/>
                                        <field name="estimated_arrive"/>
                                        <field name="sending_agent"/>
                                        <field name="receiving_agent"/>
                                    </group>
                                    <group string="Voyage/Flight">
                                        <field name="voyage_departure"/>
                                        <field name="voyage_intermediate"/>
                                        <field name="voyage_arrival"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="packs" attrs="{'required':[('mode_of_transport','!=','documentation')]}"/>
                                        <field name="package_type_id"/>
                                        <field name="actual_volume"/>
                                        <field name="actual_volume_uom"/>
                                        <field name="actual_weight"/>
                                        <field name="actual_weight_uom"/>
                                    </group>
                                </group>
                                <group string="Planned Container" attrs = "{'invisible':[('mode_of_transport','not in',['ocean','sea_then_air','rail','land'])]}">
                                    <field nolabel="1" name="planned_container_ids">
                                        <tree>
                                            <field name="number"/>
                                            <field name="count"/>
                                            <field name="cont_type"/>
                                            <field name="seal" string="seal#"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page name="shipment" string="Shipment">
                                <group>
                                    <group>
                                        <field name="shipment_no" readonly="1"/>
                                        <field name="booking_no" readonly="1"/>
                                        <field name="declaration_ref"/>
                                        <field name="shipment_house_bil"/>
                                    </group>
                                    <group>
                                        <field name="shipment_origin" />
                                        <field name="shipment_destination"/>
                                        <field name="shipment_service_level"/>
                                    </group>
                                </group>
                                <group string="Console">
                                    <field name="consol_details_ids" nolabel="1"/>
                                </group>
                            </page>
                            <page name="partner_addresses" string="Addresses">
                                <group string="Addresses">
                                    <field name="partner_address_ids" nolabel="1"/>
                                </group>
                            </page>
                            <page name="doc_data" string="Doc Data">
                                <group>
                                    <group>
                                        <field name="document_type"/>
                                    </group>
                                    <group>
                                        <field name="always_show_common_field"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="freight_doc_line_ids" nolabel="1"/>
                                </group>
                            </page>
<!--                            <page name="additional_details" string="Additional Details">-->
<!--                            </page>-->
                            <page name="product_qty_summary" string="Product Quantity Summary">
                                <group>
                                    <field name="product_qty_summary_ids" nolabel="1" readonly="1"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="product_summary_line_count" readonly="1"/>
                                        <field name="order_line_inner_packs" readonly="1"/>
                                        <field name="order_line_outer_packs" readonly="1"/>
                                        <field name="product_summary_quantity" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="product_summary_invoiced" readonly="1"/>
                                        <field name="product_summary_quantity_received" readonly="1"/>
                                        <field name="product_summary_remaining" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page name="custom_val_charges" string="Custom Valuation Charges">
                                <group>
                                    <field name="custom_valuation_charges_ids" nolabel="1"/>
                                </group>
                            </page>
                            <page name="tracking_dates" string="Tracking Dates">
                                <group>
                                    <field name="tracking_dates_ids" nolabel="1"/>
                                </group>
                            </page>
<!--                            <page name="order_split" string="Order Split">-->
<!--                                <group >-->
<!--                                    <field name="split_order_ids" nolabel="1"/>-->
<!--                                </group>-->
<!--                            </page>-->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_freight_order_tree_view">
            <field name="name">freight.order.tree.view</field>
            <field name="model">freight.order</field>
            <field name="arch" type="xml">
                <tree string="Order">
                    <field name="order_no"/>
                    <field name="buyer"/>
                    <field name="shipper"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="freight_order_action">
            <field name="name">Order</field>
            <field name="res_model">freight.order</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new order.
                </p>
            </field>
        </record>

        <menuitem name="Order" parent="freight.freight_operations" id="menu_freight_order"
                  action="freight_order_action" />

    </data>
</odoo>
