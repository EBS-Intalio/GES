<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_freight_pod_form_view">
            <field name="name">freight.pod.form.view</field>
            <field name="model">freight.pod</field>
            <field name="arch" type="xml">
                <form string="POD">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_freight_freight_pod_tree_view">
            <field name="name">freight.pod.tree.view</field>
            <field name="model">freight.pod</field>
            <field name="arch" type="xml">
                <tree string="Freight POD">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="view_freight_pod_action">
            <field name="name">POD</field>
            <field name="res_model">freight.pod</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new pod.
                </p>
            </field>
        </record>
        <menuitem name="POD" parent="freight.freight_configuration" id="menu_freight_pod_id"
                  action="view_freight_pod_action" sequence="2"/>

    </data>
</odoo>
