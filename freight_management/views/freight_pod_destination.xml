<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_freight_pofd_destination_form_view">
            <field name="name">freight.pofd.destination.form.view</field>
            <field name="model">freight.pofd.destination</field>
            <field name="arch" type="xml">
                <form string="Pofd Destination">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_freight_freight_pofd_destination_tree_view">
            <field name="name">freight.pofd.destination.tree.view</field>
            <field name="model">freight.pofd.destination</field>
            <field name="arch" type="xml">
                <tree string="Pofd Destination">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="view_freight_pofd_destination_action">
            <field name="name">POFD Destination</field>
            <field name="res_model">freight.pofd.destination</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new pofd destination.
                </p>
            </field>
        </record>

        <menuitem name="POFD Destination" parent="freight.freight_configuration" id="menu_freight_pofd_destination_id"
                  action="view_freight_pofd_destination_action" sequence="2"/>

    </data>
</odoo>
