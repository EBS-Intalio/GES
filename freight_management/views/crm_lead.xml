<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="freight_management_crm_lead_view_form" model="ir.ui.view">
            <field name="name">freight_management.crm.lead.view.form.inherit.crm</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <button name="create_freight_request" class="oe_highlight"
                            type="object" string="Create Freight Request"
                            attrs="{'invisible': [('type','!=','lead')]}"/>
                </xpath>
                <xpath expr="//form/sheet/div" position="before">
                    <div class="oe_button_box" name="button_box">
                    <button name="action_show_request"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-truck"
                                attrs="{'invisible': [('freight_request_count', '=', 0)]}">
                            <field name="freight_request_count" widget="statinfo" string="Request"/>
                        </button>
                    </div>
                </xpath>

            </field>
        </record>

        <menuitem name="Request" parent="crm.crm_menu_config"
                  id="freight_crm_job_request" action="freight_management.freight_management_freight_job_request_action"
                  sequence="5"/>

    </data>
</odoo>
