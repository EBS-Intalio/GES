        <record model="ir.ui.view" id="freight_management_view_freight_pricing_tree">
            <field name="name">freight.pricing.tree</field>
            <field name="model">freight.pricing</field>
            <field name="arch" type="xml">
                <tree string="Operations">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="freight_management_view_freight_pricing_action">
            <field name="name">Freight pricing</field>
            <field name="res_model">freight.pricing</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('freight_management_view_freight_pricing_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('freight_management_freight_pricing_form_view')})]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Freight Pricing.
                </p>
            </field>
        </record>

        <record model="ir.ui.menu" id="ebs_freight_pricing.freight_pricing_menuitem">
            <field name="action" ref="freight_management_view_freight_pricing_action"/>
        </record>

<!--        <menuitem name="Freight pricing" parent="freight_management.menu_freight_operations"-->
