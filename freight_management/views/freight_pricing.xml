<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="freight_management_freight_pricing_form_view" model="ir.ui.view">
            <field name="name">freight_management.freight.pricing.form</field>
            <field name="model">freight.pricing</field>
            <field name="arch" type="xml">
                <form string="Operations">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="action_done" string="Done" states="draft" type="object"
                                default_focus="1" class="oe_highlight"/>
                        <button name="reset_pricing" string="Back To Pricing" states="done" type="object" default_focus="1"
                                class="oe_highlight"/>
                        <field name="order_ids" invisible="1"/>
                        <field name="freight_request_id" invisible="1"/>
                        <button name="create_quotations" string="Create Quotations"  type="object"  class="oe_highlight" attrs="{'invisible':['|',('state','=','draft'), ('freight_request_id', '=', False)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
<!--                            <button class="oe_stat_button" name="button_shipping"-->
<!--                                    attrs="{'invisible': ['|', ('freight_id','=',False),('state','=','draft')]}"-->
<!--                                    type="object" icon="fa-truck">-->
<!--                                Shipment-->
<!--                            </button>-->
                            <button class="oe_stat_button" name="button_request"
                                    attrs="{'invisible': [('freight_request_id','=',False)]}"
                                    type="object" icon="fa-reorder">
                                Request
                            </button>
                             <button name="action_view_sales_order"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-reorder"
                                attrs="{'invisible': [('sales_count', '=', 0)]}">
                            <field name="sales_count" widget="statinfo" string="Sales Order"/>
                        </button>
                        </div>
                        <h1>
                            <div>
                                <field name="name" readonly="1"/>
                            </div>
                        </h1>
                        <group string="Operation">
                            <group>
                                <field name="freight_transport" options="{'horizontal': true}" widget="radio"/>

                                <field name="ocean_shipment" options="{'horizontal': true}" widget="radio"
                                   attrs="{'invisible': [('freight_transport','!=','ocean')], 'required': [('freight_transport', '=', 'ocean')]}"/>
                                <field name="rail_shipment_type" options="{'horizontal': true}" widget="radio"
                                       attrs="{'invisible': [('freight_transport','!=','rail')], 'required': [('freight_transport', '=', 'rail')]}"/>
                                <field name="inland_shipment" options="{'horizontal': true}" widget="radio"
                                       attrs="{'invisible': [('freight_transport','!=','land')], 'required': [('freight_transport', '=', 'land')]}"/>
                                <field name="sea_then_air_shipment" options="{'horizontal': true}" widget="radio"
                                       attrs="{'invisible': [('freight_transport','!=','sea_then_air')], 'required': [('freight_transport', '=', 'sea_then_air')]}"/>
                                <field name="air_then_sea_shipment" options="{'horizontal': true}" widget="radio"
                                       attrs="{'invisible': [('freight_transport','!=','air_then_sea')], 'required': [('freight_transport', '=', 'air_then_sea')]}"/>

<!--                                <field name="freight_id" invisible="1"/>-->
                                <field name="freight_request_id" invisible="1"/>

                                <field name="freight_target_eta"/>
                                <field name="freight_target_etd"/>
                            </group>
                            <group>
                                <field name="equipment_type" attrs="{'invisible': [('freight_transport','!=','ocean')]}" />
                                <field name="equipment_count" attrs="{'invisible': [('freight_transport','!=','ocean')]}" />
                                <field name="preferred_airline_id" attrs="{'invisible': [('freight_transport','!=','air')]}"/>
                                <field name="freight_flight_no" attrs="{'invisible': [('freight_transport','!=','air')]}"/>
                                <field name="freight_shipping_line_id" attrs="{'invisible': [('freight_transport','!=','ocean')]}"/>
                                <field name="origin_days" attrs="{'invisible': [('freight_transport','!=','ocean')]}"/>
                                <field name="freight_vessel_id" attrs="{'invisible': [('freight_transport','!=','ocean')]}"/>
                                <field name="Port_days" attrs="{'invisible': [('freight_transport','!=','ocean')]}" string="Free Days at Destination"/>

                                <field name="origin_country" attrs="{'invisible': [('freight_transport','!=','land')]}"/>
                                <field name="origin_country_border" attrs="{'invisible': [('freight_transport','!=','land')]}"/>
                                <field name="transit_country" attrs="{'invisible': [('freight_transport','!=','land')]}"/>
                                <field name="transit_country_border"
                                       attrs="{'invisible': [('freight_transport','!=','land')]}"/>
                                <field name="rout" attrs="{'invisible': [('freight_transport','!=','land')]}"/>
                                <field name="freight_trucker" attrs="{'invisible': [('freight_transport','!=','land')]}"/>
                                <field name="freight_trucker_number" attrs="{'invisible': [('freight_transport','!=','land')]}"/>
<!--                                <field name="carrier_ids" widget="many2many_tags" attrs="{'invisible': [('state','!=','done')]}" domain="[('is_carrier', '=', True)]"/>-->
                                <field name="carrier_ids" widget="many2many_tags" domain="[('is_carrier', '=', True)]"/>
                            </group>

                        </group>
                        <group>
                            <group>
                                <field name="freight_additional_comments"/>
                                <field name="sale_order_template_id"/>
                                <field name="currency_id"/>
                                <field name="different_amount" attrs="{'invisible': [('state','!=','done')]}"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="pricing_data" string="History">
                                <field name="freight_pricing_data_ids" nolabel="1" widget="one2many" mode="tree" readonly="1">
                                    <tree>
                                        <field name="pricing_id" invisible="1"/>
                                        <field name="freight_transport" />
                                        <field name="freight_target_eta" />
                                        <field name="freight_target_etd" />
                                        <field name="preferred_airline_id" attrs="{'column_invisible': [('parent.freight_transport','!=','air')]}"/>
                                        <field name="freight_flight_no" attrs="{'column_invisible': [('parent.freight_transport','!=','air')]}"/>
                                        <field name="freight_shipping_line_id" attrs="{'column_invisible': [('parent.freight_transport','!=','ocean')]}"/>
                                        <field name="freight_vessel_id" attrs="{'column_invisible': [('parent.freight_transport','!=','ocean')]}"/>
                                        <field name="origin_days" attrs="{'column_invisible': [('parent.freight_transport','!=','ocean')]}"/>
                                        <field name="port_days" attrs="{'column_invisible': [('parent.freight_transport','!=','ocean')]}"/>
                                        <field name="origin_country" attrs="{'column_invisible': [('parent.freight_transport','!=','land')]}"/>
                                        <field name="origin_country_border" attrs="{'column_invisible': [('parent.freight_transport','!=','land')]}"/>
                                        <field name="transit_country" attrs="{'column_invisible': [('parent.freight_transport','!=','land')]}"/>
                                        <field name="transit_country_border" attrs="{'column_invisible': [('parent.freight_transport','!=','land')]}"/>
                                        <field name="rout" attrs="{'column_invisible': [('parent.freight_transport','!=','land')]}"/>
                                        <field name="freight_trucker" attrs="{'column_invisible': [('parent.freight_transport','!=','land')]}"/>
                                        <field name="freight_trucker_number" attrs="{'column_invisible': [('parent.freight_transport','!=','land')]}"/>
                                        <button name="send_data" string="Update Data" type="object"/>
                                    </tree>
                                </field>
                            </page>
                            <page name='charges' string="Charges">
                                <field name="charges_ids" nolabel="1" widget="one2many" mode="tree">
                                    <tree string="Charges" editable="bottom">
                                        <field name="product_id" options="{'no_create_edit':1}"/>
                                        <field name="freight_line_section_id" />
                                        <field name="currency_id"/>
                                        <field name="different_amount" attrs="{'column_invisible': [('parent.state','!=','done')]}"/>
                                        <field name="charge_amount" attrs="{'column_invisible': [('parent.different_amount','!=','price_1'), ('parent.state','=','done')]}"/>

                                        <field name="charge_amount_price_2" attrs="{'column_invisible': [('parent.different_amount','!=','price_2'), ('parent.state','=','done')]}"/>

                                        <field name="charge_amount_price_3" attrs="{'column_invisible': [('parent.different_amount','!=','price_3'), ('parent.state','=','done')]}" />

                                        <field name="margin_per" attrs="{'column_invisible': [('parent.state','!=','done')]}"/>
                                        <field name="margin_amount" attrs="{'column_invisible': [('parent.state','!=','done')]}"/>
                                        <field name="charge_total_amount" attrs="{'column_invisible': [('parent.state','!=','done')]}"/>
                                        <field name="converted_amount" invisible="1"/>
                                    </tree>
                                </field>
                            </page>

                        </notebook>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="total_charges" attrs="{'invisible': [('state','!=','done')]}"/>
                        </group>

                        <group class="oe_subtotal_footer oe_right" style="margin-right:20px">
                            <field name="total_charges_amount_eur"/>
                        </group>

                        <group class="oe_subtotal_footer oe_right" style="margin-right:20px">
                            <field name="total_charges_amount_usd"/>
                        </group>

                        <group class="oe_subtotal_footer oe_right" style="margin-right:20px">
                            <field name="total_charges_amount_aed" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


