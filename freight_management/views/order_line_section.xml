<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_freight_order_line_section_form_view">
            <field name="name">order.line.section.form.view</field>
            <field name="model">order.line.section</field>
            <field name="arch" type="xml">
                <form string="Order Line Section">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_freight_order_line_section_tree_view">
            <field name="name">order.line.section.tree.view</field>
            <field name="model">order.line.section</field>
            <field name="arch" type="xml">
                <tree string="Order Line Section">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="view_freight_order_line_section_action">
            <field name="name">Order Line Section</field>
            <field name="res_model">order.line.section</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new order line section.
                </p>
            </field>
        </record>

        <menuitem name="Order Line Section" parent="freight.freight_configuration" id="menu_freight_order_line_section_id"
                  action="view_freight_order_line_section_action" sequence="2"/>

    </data>
</odoo>
