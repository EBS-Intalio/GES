<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="unloco_data_tree_view" model="ir.ui.view">
            <field name="name">unloco.data.tree.view</field>
            <field name="model">unloco.data</field>
            <field name="arch" type="xml">
                <tree string="Unloco">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="unloco_data_form_view" model="ir.ui.view">
            <field name="name">unloco.data.form.view</field>
            <field name="model">unloco.data</field>
            <field name="arch" type="xml">
                <form string="Unloco">
                    <sheet>
                        <group string="Location Details">
                            <group>
                                <field name="name"/>
                                <field name="iata_code"/>
                                <field name="iata_reg_code"/>
                                <field name="port_name"/>
                                <field name="proper_name"/>
                                <field name="country_id"/>
                                <field name="state_id"/>
                                <field name="tz"/>
                            </group>
                                <group>
                                    <field name="is_system_updateble" string="Is System Updatable"/>
                                    <field name="is_system" string="Is System"/>
                                </group>
                        </group>
                        <group>
                            <group string="Coordinates">
                                    <field name="latitude"/>
                                    <field name="longitude"/>
                                </group>
                            <group string="Date/Time Coversion">
                                <field name="date_current"/>
                                <field name="date_covert"/>
                            </group>
                        </group>
                        <group string="Identifiers" style="width:100%">
                            <group style="width:33%">
                                <field name="has_post"/>
                                <field name="has_customs"/>
                                <field name="has_unload"/>
                                <field name="has_airport"/>
                            </group>
                            <group style="width:33%">
                                <field name="has_rail"/>
                                <field name="has_road"/>
                                <field name="has_store"/>
                                <field name="has_terminal"/>
                            </group>
                            <group style="width:33%">
                                <field name="has_disc"/>
                                <field name="has_seaport"/>
                                <field name="has_outport"/>
                                <field name="has_store"/>
                            </group>
                        </group>
                        <group string="Local codes">
                            <field name="country_data_ids">
                                <tree editable="bottom">
                                    <field name="country_id"/>
                                    <field name="usage"/>
                                    <field name="code"/>
                                </tree>
                            </field>
                        </group>


                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>