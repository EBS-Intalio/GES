<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="container_type_tree_view" model="ir.ui.view">
            <field name="name">Container.type.tree.view</field>
            <field name="model">container.type</field>
            <field name="arch" type="xml">
                <tree string="Container Type">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="container_type_form_view" model="ir.ui.view">
            <field name="name">Container.type.form.view</field>
            <field name="model">container.type</field>
            <field name="arch" type="xml">
                <form string="Container Type">
                    <sheet>
                        <group string="Container Type Details">
                            <group>
                                <field name="name"/>
                                <field name="Description"/>
                                <field name="has_tynes"/>
                                <field name="high_cube"/>
                                <field name="has_vents"/>
                            </group>
                            <group>
                                <field name="container_transport_mode"/>
                                <field name="container_type"/>
                                <field name="uld_rate_class"/>
                            </group>
                        </group>
                        <group string="Custom Container Codes">
                            <field name="country_data_ids">
                                <tree editable="bottom">
                                    <field name="container_type_id" invisible="1"/>
                                    <field name="country_id"/>
                                    <field name="country_code"/>
                                    <field name="usage"/>
                                    <field name="code"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </group>
                        <group string="ISO Container Details">
                            <group>
                                <field name="iso_type"/>
                                <field name="Size"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="iso_off_cont_size"/>
                                <field name="is_comm_Oversize"/>
                            </group>
                        </group>
                        <group>
                            <group string="Container Dimensions" style="width:60%">
                                <div class="oe_row" name="Length" string="Lenght">
                                    <label for="lenght_in_foot" string="Lenght"/>
                                    <field name="lenght_in_foot" style="width:15%"/>
                                    <span>ft</span>
                                    <field name="lenght_in_meter" nolabel="1" style="width:15%"/>
                                    <span>m</span>
                                    <field name="lenght_in_foot1" nolabel="1" style="width:15%"/>
                                    <span>ft</span>
                                    <field name="lenght_in_inch" nolabel="1" style="width:15%"/>
                                    <span>in</span>
                                </div>
                                <br/>
                                <div class="oe_row" name="Container Width">
                                    <label for="container_width_in_foot" string="Container Width"/>
                                    <field name="container_width_in_foot" style="width:15%"/>
                                    <span>ft</span>
                                    <field name="container_width_in_meter" nolabel="1" style="width:15%"/>
                                    <span>m</span>
                                    <field name="container_width_in_inch" nolabel="1" style="width:15%"/>
                                    <span>ft</span>
                                    <field name="container_width_in_foot2" nolabel="1" style="width:15%"/>
                                    <span>in</span>
                                </div>
                                <br/>
                                <div class="oe_row" name="Height">
                                    <label for="height_width_in_foot" string="Height"/>
                                    <field name="height_width_in_foot" style="width:15%"/>
                                    <span>ft</span>
                                    <field name="height_width_in_meter" nolabel="1" style="width:15%"/>
                                    <span>m</span>
                                    <field name="height_width_in_inch" nolabel="1" style="width:15%"/>
                                    <span>ft</span>
                                    <field name="height_width_in_foot2" nolabel="1" style="width:15%"/>
                                    <span>in</span>
                                </div>
                                <br/>
                                <div class="oe_row" name="Teu Cunt">
                                    <label for="teu_count" string="Teu Cunt"/>
                                    <field name="teu_count" style="width:20%"/>
                                </div>
                                <br/>
                                <div class="oe_row" name="Max Gross">
                                    <label for="max_gross_wt_lb" string="Max Gross Wt"/>
                                    <field name="max_gross_wt_lb" style="width:20%"/>
                                    <span>lb</span>
                                    <field name="max_gross_wt_kg" nolabel="1" style="width:20%"/>
                                    <span>Kg</span>
                                </div>
                                <br/>
                                <div class="oe_row" name="Tare weight">
                                    <label for="tare_wt_lb" string="Tare Wgt"/>
                                    <field name="tare_wt_lb" style="width:20%"/>
                                    <span>lb</span>
                                    <field name="tare_wt_kg" nolabel="1" style="width:20%"/>
                                    <span>Kg</span>
                                </div>
                                <br/>
                                <div class="oe_row" name="Max Net">
                                    <label for="max_net_wt_lb" string="Max Net Wgt"/>
                                    <field name="max_net_wt_lb" style="width:20%"/>
                                    <span>lb</span>
                                    <field name="max_net_wt_kg" nolabel="1" style="width:20%"/>
                                    <span>Kg</span>
                                </div>
                                <br/>
                                <div class="oe_row" name="Capacity">
                                    <label for="capacity_cf" string="Capacity"/>
                                    <field name="capacity_cf" style="width:20%"/>
                                    <span>cf</span>
                                    <field name="capacity_m3" nolabel="1" style="width:20%"/>
                                    <span>M3</span>
                                </div>
                            </group>
                            <group string="Container Class" style="width:40%">
                                <field name="cont_sto_class" />
                                <field name="frei_charg_rate_class" />
                                <field name="hand_charg_rate_class"/>
                                <field name="eq_sz_ty_code" />
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>