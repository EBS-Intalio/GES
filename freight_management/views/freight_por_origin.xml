<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_freight_por_origin_form_view">
            <field name="name">freight.por.origin.form.view</field>
            <field name="model">freight.por.origin</field>
            <field name="arch" type="xml">
                <form string="POR Origin">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_freight_por_origin_tree_view">
            <field name="name">freight.por.origin.tree.view</field>
            <field name="model">freight.por.origin</field>
            <field name="arch" type="xml">
                <tree string="POR Origin">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="view_freight_por_origin_action">
            <field name="name">POR Origin</field>
            <field name="res_model">freight.por.origin</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new por origin.
                </p>
            </field>
        </record>
        <menuitem name="POR Origin" parent="freight.freight_configuration" id="menu_freight_por_origin_id"
                  action="view_freight_por_origin_action" sequence="2"/>

    </data>
</odoo>
